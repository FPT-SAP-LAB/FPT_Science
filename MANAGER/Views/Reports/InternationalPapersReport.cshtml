
@{
    ViewBag.Title = "THỐNG KÊ KHEN THƯỞNG BÀI BÁO QUỐC TẾ ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ENTITIES;
<div class="card card-custom gutter-b">
    <div class="card-body">
        <!--begin: Search Form-->
        <!--begin::Search Form-->
        <div class="mb-7">

            <div class="row align-items-center">
                <div class="col-lg-10 col-xl-8">
                    <div class="row align-items-center">
                        <div class="col-md-3 my-2 my-md-0">
                            <div class="input-icon">
                                <input type="text" class="form-control"
                                       placeholder="Tên..."
                                       id="search_name" />
                                <span>
                                    <i class="flaticon2-search-1 text-muted"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-3 my-2 my-md-0">
                            <div class="d-flex align-items-center">
                                <label class="mr-3 mb-0 d-none d-md-block">Hạng:</label>
                                <select class="form-control"
                                        id="search_hang">
                                    <option label="Label"></option>
                                    @foreach (PaperCriteria cr in ViewBag.criterias)
                                    {
                                        <option value="@cr.criteria_id">@cr.name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 my-2 my-md-0">
                            <div class="d-flex align-items-center">
                                <label class="mr-3 mb-0 d-none d-md-block">Năm:</label>
                                <select class="form-control"
                                        id="search_nam">
                                    <option label="Label"></option>
                                    @foreach (var year in ViewBag.years)
                                    {
                                        <option value="@year">@year</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3 col-xl-3 mt-5 mt-lg-0">
                            <a href="#"
                               class="btn btn-light-primary px-6 font-weight-bold" id="search_btn">
                                Tìm kiếm
                            </a>
                        </div>

                    </div>

                </div>
                <div class="col-lg-2 col-xl-4 mt-5 mt-lg-0"
                     style="text-align: right;">
                    <div class="dropdown dropdown-inline mr-2">
                        <button type="button"
                                class="btn btn-light-primary font-weight-bolder dropdown-toggle"
                                data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
