                        </div>
                        <!--end::Dropdown Menu-->
                    </div>
                </div>
            </div>
            <div class="row align-items-center" style="margin-bottom:-2rem">
                <div class="col-md-3 my-2 my-md-0">
                    <div class="d-flex align-items-center" style="margin-top: 3rem">
                        <label class="mr-3 mb-0 d-none d-md-block text-muted">Tổng thưởng: </label>
                        <span class="label label-xl label-danger label-pill label-inline mr-2 text font-weight-bolder" id="total_money"></span>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Search Form-->
        <!--begin: Datatable-->
        <table class="table table-bordered table-checkable" id="kt_datatable">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Ngày Hiệu lực</th>
                    <th>Số Quyết Định</th>
                    <th>Tác giả</th>
                    <th>Tên Bài Báo</th>
                    <th>Tên Tạp Chí</th>
                    <th>Xếp loại</th>
                    <th>Lĩnh vực</th>
                    <th>Đồng tác giả</th>
                    <th>Tiền thưởng</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable-->
        @section scripts{
            <script>
                var table = $('#kt_datatable').DataTable({
                    responsive: true,
                    // DOM Layout settings
                    dom: `<'row'<'col-sm-12'tr>>
                                                        <'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>`,
                    lengthMenu: [5, 10, 25, 50],
                    bInfo: false,
                    pageLength: 10,
                    serverSide: true,
                    columnDefs: [
                        { width: "5%", targets: 0 },
                        { width: "10%", targets: 1 },
                        { width: "10%", targets: 3 },
                        { width: "20%", targets: 4 },
                        { width: "10%", targets: 5 },
                        { width: "10%", targets: 6 },
                        { width: "10%", targets: 7 },
                        { width: "5%", targets: 8 },
                        { width: "10%", targets: 9 }
                    ],
                    ajax: {
                        type: "POST",
                        url: "/Reports/getAwardMoneyInoutCountry",
                        datatype: "json",
                        data: function (d) {
                            d.name = $("#search_name").val();
                            d.year = $("#search_nam").val()
                            d.hang = $("#search_hang").val()
                            d.type = 2
                        },
                        cache: false,
                        dataSrc: function (json) {
                            $("#total_money").text(AddComma(json.total) + " VND")
                            return json.data;
                        }
                    },
                    language: {
                        'lengthMenu': 'Display _MENU_',
                    },

                    // Order settings
                    order: [[1, 'desc']],

                    columns: [
                        { data: "rownum", name: "rownum", orderable: false },
                        { data: "valid_date_string", name: "valid_date_string", orderable: false },
                        { data: "decision_number", name: "decision_number", orderable: false },
                        { data: "authors", name: "authors", orderable: false },
                        { data: "paper_name", name: "paper_name", orderable: false },
                        { data: "journal_name", name: "journal_name", orderable: false },
                        {
                            data: "criterias", name: "criterias", render: function (data) {
                                n=""
                                for (var i in data) {
                                    if (i != data.length - 1) {
                                        n += (data[i].name + ", ")
                                    } else {
                                        n += data[i].name 
                                    }
                                }
                                return n
                            }
                        },
                        { data: "specialization", name: "specialization", orderable: false },
                        { data: "co_author", name: "co_author", orderable: false },
                        {
                            data: "total_reward", name: "total_reward", render: function (data) {
                                return AddComma(data)
                            }
                        },
                    ],
                    initComplete: function (settings, json) {
                        $("#loader_panel").hide()
                    }
                });
                //////////////////////////////////////START SELECT TAG/////////////////////////////////////////////
                list_select = {
                    "search_nam": "Chọn năm",
                    "search_coso": "Chọn cơ sở",
                    "search_hang": "Hạng"
                }
                for (let i in list_select) {
                    $('#' + i).select2({
                        placeholder: list_select[i],
                        allowClear: true
                    });
                }
                //////////////////////////////////////END SELECT TAG/////////////////////////////////////////////
                $("#search_btn").click(function () {
                    table.ajax.reload()
                })
            </script>

        }

    </div>
</div>

