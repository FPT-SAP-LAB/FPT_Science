@using ENTITIES.CustomModels.ScienceManagement.ArticlePolicy;
@{
    ViewBag.Title = "QUẢN LÝ THÔNG TIN CHÍNH SÁCH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #mytable th {
        vertical-align: middle !important;
    }
</style>

<div class="card card-custom gutter-b">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="float-right">
                    <a href="/ArticlePolicy/Add" class="btn btn-light-primary px-6 font-weight-bold">
                        Thêm thông tin
                    </a>
                </div>
            </div>
            <div class="col-xl-12 col-xxl-12 table-responsive">
                <br />
                <table id="mytable" class="table table-bordered table-checkable">
                    <thead>
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Loại chính sách</th>
                            <th>Người tạo</th>
                            <th>Ngày chỉnh sửa cuối</th>
                            <th style="min-width: 125px">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ArticlePolicyIndex item in ViewBag.items)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.TypeName</td>
                                <td>@item.CreatedBy</td>
                                <td>@item.LastEdited</td>
                                <td class="text-center">
                                    <a href='/ArticlePolicy/History?id=" + data.RequestID + "' class='btn btn-sm btn-clean btn-icon'><i class='far fa-clock'></i></a>
                                    <a href='/ArticlePolicy/Detail?id=" + data.RequestID + "' class='btn btn-sm btn-clean btn-icon'><i class='fas fa-eye'></i></a>
                                    <a href='/ArticlePolicy/Edit?id=" + data.RequestID + "' class='btn btn-sm btn-clean btn-icon'><i class='fa fa-edit'></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <!--end: Datatable-->
        </div>
        @{
            //Html.RenderPartial("_LoaderPanel");
        }
    </div>
</div>

@section Scripts {

}