                            <tr>
                                @foreach (ENTITIES.Language item in ViewBag.languages)
                                {
                                    <th class="text-center">@item.language_name</th>
                                }
                                <th class="text-center">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (int item in ViewBag.DistinctList)
                            {
                                <tr>
                                    @foreach (ENTITIES.ConferenceCriteriaLanguage crit in list.Where(x => x.criteria_id == item))
                                    {
                                        <td>
                                            <input type="text" class="form-control" value="@crit.name" />
                                        </td>
                                    }
