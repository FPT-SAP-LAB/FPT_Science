
@{
    //ViewBag.Title = "WaitDecision";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-custom">
    <div class="card-body">
            <div class="row" style="margin-bottom: 25px">
                <div class="col-xl-12" style="text-align: start">
                    <button class="btn btn-light-success px-6 font-weight-bold">Upload quyết định</button>
                    <button class="btn btn-light-success px-6 font-weight-bold">Xuất excel</button>
                </div>
            </div>
            <table id="tapchiin" class="table table-bordered table-checkable">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Người request</th>
                        <th>MSNV/MSSV</th>
                        <th>Đơn vị công tác</th>
                        <th>Tổng số trích dẫn</th>
                        <th>Tổng thưởng</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                        foreach (var item in ViewBag.wait)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.name</td>
                                <td>@item.mssv_msnv</td>
                                <td>@item.office_abbreviation</td>
                                <td>@item.sum</td>
                                <td>@item.total_reward</td>
                                <td></td>
                            </tr>
                        }
                        count++;
                    }
                </tbody>
            </table>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
            });
            $('#tapchiin').DataTable({
                "columns": [
                    { width: "5%" },
                    { width: "20%" },
                    { width: "15%" },
                    { width: "15%" },
                    { width: "15%" },
                    { width: "20%" },
                    { width: "10%" }
                ],
                responsive: true,

                // DOM Layout settings
                dom: `<'row'<'col-sm-12'tr>>
                              <'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>`,

                lengthMenu: [5, 10, 25, 50],

                pageLength: 10,

                language: {
                    'lengthMenu': 'Display _MENU_',
                }
            });
        });
    </script>
}

