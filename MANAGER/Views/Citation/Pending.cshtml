
@{
    //ViewBag.Title = "Pending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-custom">
    <div class="card-body">
        <table id="pending" class="table table-bordered table-checkable">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Người request</th>
                    <th>Ngày request</th>
                    <th>Trạng thái</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody id="pending-body">
                @{
                    int count = 1;
                    foreach (var item in ViewBag.pending)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@item.email</td>
                            <td>@item.created_date.ToString("dd/MM/yyyy")</td>
                            <td>@item.citation_status_id</td>
                            <td><button id="@item.request_id" class="btn btn-sm btn-clean btn-icon btn_submit" title="View"> <i class="fas fa-eye"></i> </button></td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/datetime-moment.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script>
        $(".btn_submit").click(function () {
            var id = this.id;
            var form = document.createElement("form");
            var element1 = document.createElement("input");

            form.method = "GET";
            form.action = "/Citation/Detail";

            element1.value = id;
            element1.name = "id";
            form.appendChild(element1);

            document.body.appendChild(form);

            form.submit();
        });
        $(document).ready(function () {
            $.fn.dataTable.moment('D/MM/YYYY');
            $("#pending").DataTable({
                "columns": [
                    { width: "5%" },
                    { width: "35%" },
                    { width: "20%" },
                    { width: "15%" },
                    { width: "25%" },
                ],
                responsive: true,

                // DOM Layout settings
                dom: `<'row'<'col-sm-12'tr>>
                                  <'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>`,

                lengthMenu: [5, 10, 25, 50],

                order: [[2, "desc"]],

                pageLength: 10,

                columnDefs: [
                    {
                        targets: 3,
                        render: function (data, type, full, meta) {
                            var status = {
                                1: {
                                    'title': 'Đã hủy',
                                    'class': 'label label-danger label-pill label-inline mr-2'
                                },
                                2: {
                                    'title': 'Đã xong',
                                    'class': 'label label-success label-pill label-inline mr-2'
                                },
                                3: {
                                    'title': 'Đang phê duyệt',
                                    'class': 'label label-primary label-pill label-inline mr-2'
                                },
                                4: {
                                    'title': 'Đang chờ quyết định',
                                    'class': 'label label-primary label-pill label-inline mr-2'
                                },
                                5: {
                                    'title': 'Cần chỉnh sửa',
                                    'class': 'label label-warning label-pill label-inline mr-2'
                                },
                                6: {
                                    'title': 'Đã xong',
                                    'class': 'label label-success label-pill label-inline mr-2'
                                },
                                8: {
                                    'title': 'Đã sửa',
                                    'class': 'label label-warning label-pill label-inline mr-2'
                                }
                            };
                            if (typeof status[data] === 'undefined') {
                                return data;
                            }
                            return '<span class="' + status[data].class + '">' + status[data].title + '</span>';
                        },
                    },
                ],

                language: {
                    'lengthMenu': 'Display _MENU_',
                }
            });
        });
    </script>
}
