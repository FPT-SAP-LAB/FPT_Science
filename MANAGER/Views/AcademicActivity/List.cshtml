                toastr.warning("Thời hạn bắt đầu không thể sau thời hạn kết thúc");
                save_loader.stopLoading();
                return false;
            }
            let files = uppy1.getFiles();
            if (files.length == 0) {
                toastr.warning('Vui lòng chọn ảnh cho hoạt động');
                save_loader.stopLoading();
                return false;
            } else {
                var reader = new FileReader();

                reader.onload = function (e) {
                    var image = new Image();
                    image.src = e.target.result;
                    image.onload = function () {
                        var canvas = document.createElement("canvas");
                        var ctx = canvas.getContext("2d");
                        canvas.width = image.width;
                        canvas.height = image.height;
                        ctx.drawImage(image, 0, 0);
                        var URL = canvas.toDataURL('image/jpeg');
                        var newfile = dataURItoBlob(URL);
                        var img = new FormData();

                        if (newfile.size > uppy1.getFiles()[0].size) {
                            img.append('img', uppy1.getFiles()[0].data);
                        } else {
                            img.append('img', newfile);
                        }

                        img.append('id', id_edit);
                        img.append('activity_type_id', activity_type_id);
                        img.append('activity_name', activity_name);
                        img.append('location', location);
                        img.append('from', from);
                        img.append('to', to);
                        img.append('language_id', language_id);
                        $.ajax({
                            url: '/AcademicActivity/edit_AcademicActivity',
                            data: img,
                            type: "POST",
                            success: function (data) {
                                if (data != '') {
                                    toastr.success(data);
                                    var itemId = files[0].id;
                                    uppy1.removeFile(itemId);
                                    $(id + ' .uppy-list-item[data-id="' + itemId + '"').remove();
                                    clearModal('#editModal');
                                    $('#editModal').modal('hide');
                                    datatable.ajax.reload();
                                } else {
                                    var itemId = files[0].id;
                                    uppy1.removeFile(itemId);
                                    $(id + ' .uppy-list-item[data-id="' + itemId + '"').remove();
                                    toastr.error("Có lỗi xảy ra. Vui lòng thử lại");
                                }
                                save_loader.stopLoading();
                            },
                            error: function (data) {
                                var itemId = files[0].id;
                                uppy1.removeFile(itemId);
                                $(id + ' .uppy-list-item[data-id="' + itemId + '"').remove();
                                save_loader.stopLoading();
                            },
                            dataType: "json",
                            processData: false,
                            contentType: false
                        });
                    };
                }
                reader.readAsDataURL(files[0].data);
            }
        });

