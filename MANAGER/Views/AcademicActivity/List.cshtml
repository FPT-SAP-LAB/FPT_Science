@section scripts{
    <script>
        let id_edit = "";
        let id_clone = "";
        var save_loader = new LoaderBtn($(".load-btn"));

        document.getElementById('search_year').value = new Date().getFullYear();
        function convertDate(date) {
            correctFormat = date.replace(/(\d+)\/(\d+)\/(\d+)/, "$3/$2/$1"),
                myDate = new Date(correctFormat);
            return myDate;
        }
        function dataURItoBlob(dataURI) {
            var blobBin = atob(dataURI.split(',')[1]);
            var array = [];
            for (var i = 0; i < blobBin.length; i++) {
                array.push(blobBin.charCodeAt(i));
            }
            var mimeString = dataURI.split(',')[0].split(':')[1].split(';')[0];
            var file = new Blob([new Uint8Array(array)], { type: mimeString });
            return file;
        }
        function saveTempIdDelete(id) {
            Swal.fire({
                title: "Bạn có muốn xóa hoạt động học thuật này không ?",
                text: "",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Xác nhận",
                cancelButtonText: "Hủy",
                reverseButtons: true
            }).then(function (result) {
                let object = {
                    id : id
                }
                if (result.value) {
                    $.ajax({
                        url: '/AcademicActivity/delete_AcademicActivity',
                        data: JSON.stringify(object),
                        type: "POST",
                        contentType: "application/json;charset=utf-8",
                        success: function (data) {
                            if (data != '') {
                                toastr.success(data);
                                datatable.ajax.reload();
                            } else {
                                toastr.error("Có lỗi xảy ra. Vui lòng thử lại");
                            }
                        },
                        error: function (data) {
                            alert(data)
                        }
                    });
                }
            });
        }
        function saveTempIdEdit(id) {
            id_edit = id;
            let obj = {
                id: id
            }
            $.ajax({
                url: "@Url.Action("getBaseAA", "AcademicActivity")",
                data: JSON.stringify(obj),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    document.getElementById('edit_title').value = data.baseAA.activity_name;
                    document.getElementById('edit_from').value = data.baseAA.from;
                    document.getElementById('edit_to').value = data.baseAA.to;
                    document.getElementById('edit_location').value = data.baseAA.location;
                    document.getElementById('edit_language').value = data.baseAA.language_id;
                    $('#edit_category').empty();
                    data.types.forEach(function (x) {
                        $('#edit_category').append('<option value=' + x.activity_type_id + '>' + x.activity_type_name + '</option>');
                    });
                    document.getElementById('edit_category').value = data.baseAA.activity_type_id;
                    $('#editModal').modal('show');
                },
                error: function () {
                }
            });
        }
        function saveTempIdCheckin(id) {
            window.location.href = "/CheckIn/List?id=" + id;
        }
        function resetCategory() {
            let temp_category = $('#add_category').val();
            $.ajax({
                url: "@Url.Action("resetCategory", "AcademicActivity")",
                data: JSON.stringify({ language_id: $('#add_language').val()}),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    $('#add_category').empty();
                    data.forEach(function (x) {
                        $('#add_category').append('<option value=' + x.activity_type_id + '>' + x.activity_type_name + '</option>');
                    });
                    document.getElementById('add_category').value = temp_category;
                },
                error: function (data) {
                    save_loader.stopLoading();
                }
            });
        }
        function showCloneModal(id) {
            id_clone = id;
            $('#cloneModal').modal('show');
        }
        function goDetail(id) {
            window.location.href = '/DetailOfAcademicActivity/Index?id=' + id;
        }
        function reInit() {
            var object = {
                id: id_edit,
                language_id: $('#edit_language').val()
            };
            let temp_category = $('#edit_category').val();
            $.ajax({
                url: "@Url.Action("getBaseAALanguage", "AcademicActivity")",
                data: JSON.stringify(object),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    if (data.baseAA != null) {
                        document.getElementById('edit_title').value = data.baseAA.activity_name;
                        document.getElementById('edit_location').value = data.baseAA.location;
                    } else {
                        document.getElementById('edit_title').value = '';
                        document.getElementById('edit_location').value = '';
                    }
                    $('#edit_category').empty();
                    data.types.forEach(function (x) {
                        $('#edit_category').append('<option value=' + x.activity_type_id + '>' + x.activity_type_name + '</option>');
                    });
                    document.getElementById('edit_category').value = temp_category;
                },
                error: function (data) {
                    console.log(data);
                }
            });
        }
        $('#btn_add').click(function () {
            save_loader.startLoading();
            let activity_name = document.getElementById('add_title').value;
            let activity_type_id = document.getElementById('add_category').value;
            let from = document.getElementById('add_from').value;
            let to = document.getElementById('add_to').value;
            let location = document.getElementById('add_location').value;
            let language_id = document.getElementById('add_language').value;
            if (activity_name == '' || activity_type_id == '' || from == '' || to == '' || location == '' || language_id == '') {
                toastr.warning("Bạn chưa điền hết các thông tin cho hoạt động học thuật");
                return false;
            }
            if (convertDate(from).getTime() > convertDate(to).getTime()) {
                toastr.warning("Thời hạn bắt đầu không thể sau thời hạn kết thúc");
                return false;
            }
            let object = {
                activity_name: activity_name,
                activity_type_id: activity_type_id,
                location: location,
                from: from,
                to: to
            }
            let obje = {
                obj : object,
                language_id: language_id
            }
            save_loader.startLoading();
            $.ajax({
                url: "@Url.Action("add_AcademicActivity", "AcademicActivity")",
                data: JSON.stringify(obje),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    if (data != '') {
                        toastr.success(data);
                        clearModal('#addModal');
                        $('#addModal').modal('hide');
                        datatable.ajax.reload();
                        save_loader.stopLoading();
                    } else {
                        toastr.error("Có lỗi xảy ra. Vui lòng thử lại");
                    }
                },
                error: function (data) {
                    save_loader.stopLoading();
                }
            });
        });
        function clearModal(id) {
            $(id).find('input:text, input:password, select')
                .each(function () {
                    $(this).val('');
                });
        }
        $('#btn_edit').click(function () {
            save_loader.startLoading();
            let activity_name = document.getElementById('edit_title').value;
            let activity_type_id = document.getElementById('edit_category').value;
            let from = document.getElementById('edit_from').value;
            let to = document.getElementById('edit_to').value;
            let location = document.getElementById('edit_location').value;
            let language_id = document.getElementById('edit_language').value;
            if (activity_name == '' || activity_type_id == '' || from == '' || to == '' || location == '' || language_id == '') {
                toastr.warning("Bạn chưa điền hết các thông tin cho hoạt động học thuật");
                save_loader.stopLoading();
                return false;
            }
