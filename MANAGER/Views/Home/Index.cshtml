                            opacity: 1
                        },
                        legend: {
                            position: 'top',
                            horizontalAlign: 'left',
                            offsetX: 40
                        },
                        colors: [primary, warning, success, danger, info],

                    };



                    chart = new ApexCharts(document.querySelector(apexChart), options);
                    chart.render();
                }

                return {
