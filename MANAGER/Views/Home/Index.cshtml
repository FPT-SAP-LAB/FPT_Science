    <script>
        var KTApexChartsDemo;
        var chart
        $(document).ready(function () {
            const primary = '#6993FF';
            const success = '#1BC5BD';
            const info = '#8950FC';
            const warning = '#FFA800';
            const danger = '#F64E60';

            //Class definitio
