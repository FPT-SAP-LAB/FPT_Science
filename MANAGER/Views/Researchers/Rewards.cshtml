                        <!--begin::Form-->
                        <!--begin::Body-->
                        <div class="card-body">
                            <div class="row">
                                <label class="col-xl-3"></label>
                                <div class="col-lg-12 col-xl-12">
                                    <h5 class="font-weight-bold "></h5>
                                </div>
                                <div class="col-lg-12 col-xl-12">
                                    <table class="table table-bordered table-checkable" id="tapchi_list">
