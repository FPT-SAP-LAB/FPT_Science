        </div>
        <table id="tapchiin" class="table table-bordered table-checkable">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Người request</th>
                    <th>MSNV/MSSV</th>
                    <th>Đơn vị công tác</th>
                    <th>Tên bằng sáng chế</th>
                    <th>Loại bằng sáng chế</th>
                    <th>Ghi chú</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                    foreach (var item in ViewBag.list)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@item.author_name</td>
                            <td>@item.mssv_msnv</td>
                            <td>@item.office_abbreviation</td>
                            <td>@item.name</td>
                            <td>@item.type_name</td>
                            <td>Có @item.note tác giả</td>
                            <td><button id="@item.invention_id" class="btn btn-sm btn-clean btn-icon btn_submit_detail" title="View"> <i class="fas fa-eye"></i> </button></td>
                        </tr>
                    }
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="uploadDecision" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title font-weight-bolder">Thêm quyết định</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-6">
                        <label>Ngày có hiệu lực</label>
                        <input readonly autocomplete="off" class="form-control form-control-lg custom-pickdate" id="valid_date" type="text" value="" />
                    </div>
                    <div class="col-xl-6">
                        <label>Số quyết định</label>
                        <input autocomplete="off" class="form-control form-control-lg" id="decisionNo" type="text" value="" />
                    </div>
                    <div class="col-xl-6">
                        <label>Upload file</label>
                        <div class="uppy" id="kt_uppy_1">
                            <div class="uppy-wrapper"></div>
                            <div class="uppy-list"></div>
                            <div class="uppy-status"></div>
                            <div class="uppy-informer uppy-informer-min"></div>
                        </div>
                    </div>
                    <div class="justify-content-center col-xl-12 d-flex citationE" style="margin-top: 25px">
                        <button class="btn btn-light-primary px-6 font-weight-bold" id="btn_submit" data-dismiss="modal">Lưu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/Custom JS/ListAllPaper.js"></script>
    <script>
        var uppy1;
        var formdata;
        $(".btn_submit_detail").click(function () {
            var id = this.id;
            var form = document.createElement("form");
            var element1 = document.createElement("input");

            form.method = "GET";
            form.action = "/Invention/Detail";

            element1.value = id;
            element1.name = "id";
            form.appendChild(element1);

            document.body.appendChild(form);

            form.submit();
        });
        $("#btn_submit").click(function () {
            $("#loading").show();
            formData = new FormData();
            if (uppy1.getFiles()[0] == undefined) {
                $("#loading").hide();
                toastr.error("Thiếu file quyết định");
                return false;
            }
            var number = $("#decisionNo").val();
            var date = $("#valid_date").val();
            if (number == "" || date == "") {
                $("#loading").hide();
                toastr.error("Cần nhập đủ các trường");
                return false;
            }

            formData.append('file', uppy1.getFiles()[0].data);
            formData.append('number', number);
            formData.append('date', date);

            $.ajax({
                url: "/Invention/uploadDecision",
                method: "post",
                complete: function (data) {
                    var mess = data.responseJSON.mess;
                    if (mess == "ss") {
                        $("#loading").hide();
                        location.reload();
                        //alert(mess);
                    }
                },
                error: function () {
                    toastr.error("Có lỗi xảy ra");
                    $("#loading").hide();
                    //save_loader.stopLoading();
                },
                dataType: "json",
                data: formData,
                processData: false,
                contentType: false
            });
        });

        $("#excel").click(function () {
            $.ajax({
                url: "@Url.Action("exportExcel", "Invention")",
                type: "post",
                success: function (data) {
                    window.location.href = data.location;
                },
                error: function () {
                    //alert("fail");
                }
            });
        });

        $(document).ready(function () {
            $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
            });
            $('#tapchiin').DataTable({
                "columns": [
                    { width: "5%" },
                    { width: "15%" },
                    { width: "15%" },
                    { width: "15%" },
                    { width: "25%" },
                    { width: "10%" },
                    { width: "10%" },
                    { width: "5%" }
                ],
                responsive: true,

                // DOM Layout settings
                dom: `<'row'<'col-sm-12'tr>>
                                              <'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>`,

                lengthMenu: [5, 10, 25, 50],

                pageLength: 10,

                language: {
                    'lengthMenu': 'Display _MENU_',
                }
            });
        });
    </script>
    <script src="~/Content/assets/plugins/custom/uppy/uppy.bundle.js"></script>
    <script src="~/Content/Custom JS/Citation.js"></script>
}

