    <script>
        var ConferenceDetail = document.getElementById("ConferenceDetail").parentElement.removeAttribute("class");

        function SubmitCriteria() {
            var criterias = []
            for (var i = 0; i < $("#criterias").find("input").length; i++) {
                if ($("#criterias").find("input")[i].checked)
                    criterias.push($("#criterias").find("input")[i].dataset.id);
            }
            createAndSubmitForm("/ConferenceSponsor/UpdateCriterias", JSON.stringify(criterias))
        }

        function SubmitCost() {
            var costs = []
            for (var i = 0; i < $("#ExpectedCostChild1 input[type='checkbox']").length; i++) {
                if ($("#ExpectedCostChild1 input[type='checkbox']")[i].checked)
                    costs.push($("#ExpectedCostChild1 input[type='checkbox']")[i].dataset.id);
            }
            createAndSubmitForm("/ConferenceSponsor/UpdateCosts", JSON.stringify(costs))
        }

        function createAndSubmitForm(url, data) {
            var newForm = jQuery('<form>', {
                'action': url,
                'method': 'post'
            }).append(jQuery('<input>', {
                'name': 'data',
                'value': data,
                'type': 'hidden'
            })).append(jQuery('<input>', {
                'name': 'request_id',
                'value': "@(ConferenceDetail.RequestID)",
                'type': 'hidden'
            }));
            newForm.appendTo("body").submit();
        }

        function RequestEdit() {
            createAndSubmitForm("/ConferenceSponsor/RequestEdit", "");
        }
    </script>
