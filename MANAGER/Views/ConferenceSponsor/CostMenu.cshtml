        {
            <tr>
                <th scope="row">Hoàn ứng</th>
                <td></td>
                <td></td>
                <td><span class="label label-lg label-light-danger label-inline">18,000,000 đ</span></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.CheckboxColumn)
{
