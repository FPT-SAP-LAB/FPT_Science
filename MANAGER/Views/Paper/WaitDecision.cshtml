
@{
    //ViewBag.Title = "WaitDesicion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card card-custom">
    <div class="card-body">

            <div class="row">
                <div class="col-xl-12" style="text-align: start">
                    <button class="btn btn-light-success px-6 font-weight-bold">Upload quyết định</button>
                    <button class="btn btn-light-success px-6 font-weight-bold">Xuất excel</button>
                </div>
            </div>
            <div class="card-header card-header-tabs-line">
                <div class="card-toolbar">
                    <ul class="nav nav-tabs nav-bold nav-tabs-line">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tapchi">
                                <span class="nav-icon"><i class="flaticon2-chat-1"></i></span>
                                <span class="nav-text">Bài báo trong nước</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#kyyeu">
                                <span class="nav-icon"><i class="flaticon2-drop"></i></span>
                                <span class="nav-text">Bài báo quốc tế</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tapchi" role="tabpanel" aria-labelledby="kt_tab_pane_1_4">
                        <table id="tapchiin" class="table table-bordered table-checkable">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên tác giả</th>
                                    <th>MSNV/MSSV</th>
                                    <th>Đơn vị công tác</th>
                                    <th>Tên bài báo</th>
                                    <th>Tên tạp chí</th>
                                    <th>Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Nguyễn Quốc Long</td>
                                    <td>299923</td>
                                    <td>FU-HL</td>
                                    <td>An Evaluation of Image-Based Malware Classification Using Machine Learning</td>
                                    <td></td>
                                    <td>Có 1 tác giả</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" role="tabpanel" id="kyyeu" aria-labelledby="kt_tab_pane_2_4">
                        <table id="tapchiout">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên tác giả</th>
                                    <th>MSNV/MSSV</th>
                                    <th>Đơn vị công tác</th>
                                    <th>Tên bài báo</th>
                                    <th>Tên tạp chí</th>
                                    <th>Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>An C. Tran, Nghi</td>
                                    <td>091881</td>
                                    <td>FU-HCM</td>
                                    <td>Recognition and Quantity Estimation of Pastry Images Using Pre-training Deep Convolutional Networks</td>
                                    <td></td>
                                    <td>Có 2 tác giả</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
            });
            $('#tapchiin, #tapchiout').DataTable({
                "columns": [
                    { width: "5%" },
                    { width: "20%" },
                    { width: "15%" },
                    { width: "15%" },
                    { width: "25%" },
                    { width: "10%" },
                    { width: "10%" }
                ],
                responsive: true,

                // DOM Layout settings
                dom: `<'row'<'col-sm-12'tr>>
                              <'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>`,

                lengthMenu: [5, 10, 25, 50],

                pageLength: 10,

                language: {
                    'lengthMenu': 'Display _MENU_',
                }
            });
        });
    </script>
}
