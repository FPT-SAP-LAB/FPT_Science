
@{
    ViewBag.Title = "Trao đổi cán bộ giảng viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .training-type {
        border: none;
        outline: none;
        padding: 10px 16px;
        background-color: #f1f1f1;
        cursor: pointer;
        font-size: 18px;
        border-radius: 0.42rem;
        transition: 0.3s;
    }

    .active-nav {
        background-color: #e46d27;
        color: white;
    }

    .training-type:hover {
        background-color: #a5a5a5;
        color: white;
    }

    .item-picture {
        height: 100%;
        width: 100%;
    }

    .nav-link-custom {
        display: block;
        padding: 1rem 0;
    }
</style>

<div class="card card-custom pb-4" style="background-color: #f0f8ff80">
    <div class="card-body p-0">
        <div class="row justify-content-center mt-10 px-8 px-lg-10">
            <div class="col-xl-12 col-xxl-12">
                <div class="tabbable-line">
                    <div class="tab-content" id="myTabContent">
                        <div class="row justify-content-center training-type-list">
                            <div class="mb-4 mx-2 col-lg-2 col-md-2 col-sm-2 text-center training-type type-1 active-nav">
                                <a class="nav-link-custom" id="button-tab-1">
                                    <label>CHƯƠNG TRÌNH TRAO ĐỔI CBGV</label>
                                </a>
                            </div>
                            <div class="mb-4 mx-2 col-lg-2 col-md-2 col-sm-2 text-center training-type type-2">
                                <a class="nav-link-custom" id="button-tab-2">
                                    <label>TỪ TỔ CHỨC ĐỐI TÁC</label>
                                </a>
                            </div>
                            <div class="mb-4 mx-2 col-lg-2 col-md-2 col-sm-2 text-center training-type type-3">
                                <a class="nav-link-custom" id="button-tab-3">
                                    <label>TỬ TỔ CHỨC GIÁO DỤC FPT</label>
                                </a>
                            </div>
                        </div>
                        <div class="row justify-content-center mt-4">
                            <div class="col-lg-6 col-md-6 col-sm-6 px-0 font-weight-bolder" style="height: 100px">
                                <span id="content-description">
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card card-custom pt-4">
    <div class="card-body p-0">
        <div class="row justify-content-center mb-10 px-8 px-lg-10">
            <div class="col-xl-12 col-xxl-12">
                <div class="tabbable-line">
                    <div class="tab-content" id="myTabContent">
                        
                        <div class="" id="tab-1">
                            @{
                                Html.RenderPartial("PartialView/Short_Term_Tab_1");
                            }
                        </div>
                        <div class="" id="tab-2" style="display: none">
                            @{
                                Html.RenderPartial("PartialView/Short_Term_Tab_2");
                            }
                        </div>
                        <div class="" id="tab-3" style="display: none">
                            @{
                                Html.RenderPartial("PartialView/Short_Term_Tab_3");
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        $('.training-type').click(function () {
            $('.training-type').each(function () {
                $('.active-nav').removeClass('active-nav')
            })
            $(this).addClass('active-nav')
        })


        $('.type-1').click(function () {
            $('#tab-2').fadeOut()
            $('#tab-3').fadeOut()
            $('#tab-1').fadeIn(1000)
        })

        $('.type-2').click(function () {

            $('#tab-1').fadeOut()
            $('#tab-3').fadeOut()
            $('#tab-2').fadeIn(1000)
        })

        $('.type-3').click(function () {

            $('#tab-1').fadeOut()
            $('#tab-2').fadeOut()
            $('#tab-3').fadeIn(1000)
        })

        $(document).ready(function () {
            $('#content-description').text('Nhằm trau dồi, nâng cao chuyên môn và mở rộng các cơ hội hợp tác về nghiên cứu và đào tạo song phương giữa cán bộ giảng viên Tổ chức giáo dục FPT và các tổ chức đối tác.')
        })

        $('.type-1').click(function () {
