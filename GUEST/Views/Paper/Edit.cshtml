
@{
    //ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Resources.ResourceManager rm = GUEST.Models.LanguageResource.GetResourceManager();
}


<div class="card card-custom">
    <div class="card-body p-0">
        <div class="row justify-content-center my-10 px-8 my-lg-15 px-lg-10">
            <div class="col-xl-12 col-xxl-12">
                <div class="">
                    <h3 class="mb-10 font-weight-bold text-dark">@rm.GetString("PaperInfo")</h3>
                    <div class="row">
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("PaperName")</label>
                            <input class="form-control form-control-lg edit edit" type="text" value="@ViewBag.Paper.name" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("PublishDate")</label>
                            <input class="form-control form-control-lg edit custom-pickdate" type="text" value="@ViewBag.Paper.publish_date.ToString("MM/yyyy")" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("LinkFull")</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.link_doi" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>Link scholar</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.link_scholar" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>Loại ấn phẩm</label>
                            <select id="paper_type" class="form-control form-control-lg edit">
                                <option value="1">@rm.GetString("JournalPaper")</option>
                                <option value="2">@rm.GetString("ConferencePaper")</option>
                            </select>
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("Specialized")</label>
                            <select id="chuyennganh" class="form-control form-control-lg edit">
                                @{
                                    foreach (var item in ViewBag.listSpec)
                                    {
                                        <option value="@item.specialization_id">@item.name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark">@rm.GetString("PublishInfo")</h3>
                    <div class="row">
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("JournalName")</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.journal_name" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("Vol")</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.vol" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("Page")</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.page" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("PublishName")</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.company" />
                        </div>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark">Thông tin xét thưởng</h3>
                    <div class="row" id="thuong">
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("CriteriaType")</label>
                            <select id="loaithuong" class="form-control form-control-lg edit">
                                <option value="1">@rm.GetString("International")</option>
                                <option value="2">@rm.GetString("Domestic")</option>
                            </select>
                        </div>
                        <div class="col-xl-6 form-group thuongqt">
                            <label>@rm.GetString("Criteria")</label>
                            <select id="tieuchi" class="form-control form-control-lg edit">
                                <option value="0" selected disabled>@rm.GetString("Criteria")</option>
                                @{
                                    foreach (var item in ViewBag.listCriteria)
                                    {
                                        <option class="optiontieuchi" value="@item.name">@item.name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-xl-6 form-group thuongtn" style="display: none">
                            <label style="color:#fff">abc</label>
                            <button class="btn btn-primary form-control form-control-lg edit">@rm.GetString("ListMaga")</button>
                        </div>
                        <div class="col-xl-6 form-group thuongtn" style="display: none">
                            <label>@rm.GetString("JournalIndex")</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.index" />
                        </div>
                        <div class="col-xl-6 form-group thuongtn" style="display: none">
                            <label>@rm.GetString("Note")</label>
                            <input class="form-control form-control-lg edit" type="text" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("TotalReward")</label>
                            <input class="form-control form-control-lg edit" readonly type="text" value="@ViewBag.Paper.total_reward" ; />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("RewardType")</label>
                            <select id="kieuthuong" class="form-control form-control-lg edit">
                                <option value="1">@rm.GetString("According")</option>
                                <option value="2">@rm.GetString("Repre")</option>
                            </select>
                        </div>
                        @{
                            foreach (var item in ViewBag.listCriteriaOne)
                            {
                                <div class='col-xl-12 d-flex justify-content-center onetieuchi' style="margin-top: 1rem">
                                    <span class='col-xl-2'><input readonly value="@item.name" class='form-control form-control-lg edit tieuchivalue' name='tieuchiname' type='text' /></span>
                                    <span class='col-xl-8'><input placeholder='Link' class='form-control form-control-lg edit' type='text' value="@item.link" /></span>
                                    <span class='col-xl-2'><button class='form-control form-control-lg edit btn btn-danger deletetieuchi'><i class='flaticon2-trash'></i></button></span>
                                </div>
                            }
                        }

                    </div>

                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("AuthorInfo")</h3>
                    <div class="row" id="authors-info-container">
                    </div>
                    <!--end:: Row-->
                    <div class="row">
                        <div class="col-xl-12" style="text-align: left">
                            <button class="btn btn-light-primary px-6 font-weight-bold" id="add_author_btn" data-toggle="modal" data-target="#addModal">@rm.GetString("AddAu")</button>
                        </div>

                    </div>
                    <div class="row justify-content-center">
                        <button class="btn btn-light-success px-6 font-weight-bold edit">@rm.GetString("Send")</button>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("CmtInfo")</h3>
                    <div class="row">
                        <div class="col-xl-12">
                            <form>
                                <div class="row">
                                    <div class="col-10">
                                        <input class="form-control" type="text" value="" id="example-text-input" />
                                    </div>
                                    <div class="col-2">
                                        <button type="submit" class="btn btn-block btn-success">@rm.GetString("SendM")</button>
                                    </div>
                                </div>
                            </form>
                            <br />
                            <table class="col-12 table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col" width="15%">@rm.GetString("Time")</th>
                                        <th scope="col" width="15%">@rm.GetString("Sender")</th>
                                        <th scope="col">@rm.GetString("Content")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in ViewBag.cmt)
                                        {
                                            <tr>
                                                <td>@item.date.ToString("dd/MM/yyyy")</td>
                                                <td>@item.email</td>
                                                <td>@item.content</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<datalist id="ncv_list">
    <option>1234</option>
    <option>abcd</option>
    <option>12bư</option>
    <option>323q</option>
</datalist>
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title font-weight-bolder">Thêm tác giả</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                @{
                    Html.RenderAction("AddAuthor", "PartialView");
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/ListAllPaper.js"></script>
    <script>
        var people = [];
        $('#chuyennganh').select2({
            allowClear: true
        });
        $('#tieuchi').select2({
            allowClear: true
        });
        $('#kieuthuong').select2({
            allowClear: true
        });
        $('#loaithuong').select2({
            allowClear: true
        });
        $('#paper_type').select2({
            allowClear: true
        });
        $(document).ready(function () {
            var ck = "@ViewBag.ckEdit";
            if (ck != "4") $(".edit").prop("disabled", true);
            else $(".edit").prop("disabled", false);

            var paper_type = "@ViewBag.Paper.paper_type_id";
            $("#paper_type").val(paper_type);
            $("#paper_type").trigger('change');

            var paper_TNQT = "@ViewBag.Paper.type";
            if (paper_TNQT == "Quocte") {
                $("#loaithuong").val(1);
                $(".thuongqt").show();
                $(".thuongtn").hide();
            }
            else {
                $("#loaithuong").val(2);
                $(".thuongqt").hide();
                $(".thuongtn").show();
            }
            $("#loaithuong").trigger('change');

            var kieuthuong = "@ViewBag.Paper.reward_type";
            if (kieuthuong == "Quydinh") $("#kieuthuong").val(1);
            if (kieuthuong == "Canhan") $("#kieuthuong").val(2);
            $("#kieuthuong").trigger('change');

            var spec = "@ViewBag.Paper.specialization_id";
            $("#chuyennganh").val(spec);
            $("#chuyennganh").trigger('change');

            $(".tieuchivalue").each(function () {
                var temp = $(this).val();
                var option = $("#tieuchi option[value='" + temp + "']");
                option.prop('disabled', true);
            });

            var id = "@ViewBag.id";
            $.ajax({
                url: "@Url.Action("listAuthor", "Paper")",
                type: "POST",
                data: { 'id': id},
                cache: false,
                success: function (response) {
                    for (var i = 0; i < response.author.length; i++) {
                        add_author_workplace = response.author[i].office_abbreviation;
                        add_author_msnv = response.author[i].mssv_msnv;
                        add_author_name = response.author[i].name;
                        add_author_title = response.author[i].title_name;
                        add_author_contractType = response.author[i].contract_name;
                        add_author_cmnd = response.author[i].identification_number;
                        add_author_tax = response.author[i].tax_code;
                        add_author_bank = response.author[i].bank_branch;
                        add_author_accno = response.author[i].bank_number;
                        add_author_reward = response.author[i].money_reward;
                        add_author_note = '';
                        add_author_email = response.author[i].email;
                        id = new Date().getTime();
                        au = new AuthorInfoView(add_author_workplace, add_author_msnv, add_author_name,
                            add_author_title, add_author_contractType, add_author_cmnd, add_author_tax,
                            add_author_bank, add_author_accno, add_author_reward, add_author_note, add_author_email, id);
                        $("#authors-info-container").append(au.getHTML());
                        var AddAuthor = {
                            name: add_author_name,
                            email: add_author_email,
                            bank_number: add_author_accno,
                            tax_code: add_author_tax,
                            bank_branch: add_author_bank,
                            identification_number: add_author_cmnd,
                            mssv_msnv: add_author_msnv,
                            office_id: response.author[i].office_id,
                            contract_id: response.author[i].contract_id,
                            title_id: response.author[i].title_id,
                            people_id: response.author[i].people_id
                        }
                        people.push(AddAuthor);
                    }
                },
                error: function () {
                    //alert("fail");
                }
            });
        });
        $("#loaithuong").change(function () {
            var temp = $(this).val();
            //console.log(temp);
            if (temp == 1) {
                $(".thuongqt").show();
                $(".thuongtn").hide();
            } else {
                $(".thuongqt").hide();
                $(".thuongtn").show();
                $(".deletetieuchi").each(function () {
                    $(this).click();
                });
            }
        });

        $("#tieuchi").change(function () {
            var temp = $("#tieuchi").val();
            $("#thuong").append("<div class='col-xl-12 d-flex justify-content-center onetieuchi' style='margin-top: 1rem'>" +
                "<span class='col-xl-2'><input readonly value='" + temp + "' class='form-control form-control-lg edit' name='tieuchiname' type='text' /></span>" +
                "<span class='col-xl-8'><input placeholder='Link' class='form-control form-control-lg edit' type='text' /></span>" +
                "<span class='col-xl-2'><button class='form-control form-control-lg edit btn btn-danger deletetieuchi'><i class='flaticon2-trash'></i></button></span>" +
                "</div>");
            var option = $("#tieuchi option[value='" + temp + "']");
            option.prop('disabled', true);
        });

        $("#thuong").on("click", ".deletetieuchi", function () {
            var text = $(this).closest(".onetieuchi").find("input[name='tieuchiname']").val();
            var option = $("#tieuchi option[value='" + text + "']");
            option.prop('disabled', false);
            $(this).closest(".onetieuchi").remove();
        });
    </script>
    <script src="~/Scripts/PartialViewScript.js"></script>
}