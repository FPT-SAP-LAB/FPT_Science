
@{
    //ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Resources.ResourceManager rm = GUEST.Models.LanguageResource.GetResourceManager();
}


<div class="card card-custom">
    <div class="card-body p-0">
        <div class="row justify-content-center my-10 px-8 my-lg-15 px-lg-10">
            <div class="col-xl-12 col-xxl-12">
                <div class="">
                    <h3 class="mb-10 font-weight-bold text-dark">@rm.GetString("PaperInfo")</h3>
                    <div class="row">
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("PaperName")</label>
                            <input id="paper_name" class="form-control form-control-lg edit edit" type="text" value="@ViewBag.Paper.name" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("PublishDate")</label>
                            <input id="paper_publish_date" class="form-control form-control-lg edit custom-pickdate" type="text" value="@ViewBag.Paper.publish_date.ToString("MM/yyyy")" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("LinkFull")</label>
                            <input id="paper_full" class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.link_doi" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>Link scholar</label>
                            <input id="paper_scholar" class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.link_scholar" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>Loại ấn phẩm</label>
                            <select id="paper_type" class="form-control form-control-lg edit">
                                <option value="1">@rm.GetString("JournalPaper")</option>
                                <option value="2">@rm.GetString("ConferencePaper")</option>
                            </select>
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("Specialized")</label>
                            <select id="chuyennganh" class="form-control form-control-lg edit">
                                @{
                                    foreach (var item in ViewBag.listSpec)
                                    {
                                        <option value="@item.specialization_id">@item.name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark">@rm.GetString("PublishInfo")</h3>
                    <div class="row">
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("JournalName")</label>
                            <input id="paper_journal" class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.journal_name" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("Vol")</label>
                            <input id="paper_vol" class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.vol" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("Page")</label>
                            <input id="paper_page" class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.page" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("PublishName")</label>
                            <input id="paper_publish_name" class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.company" />
                        </div>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark">Thông tin xét thưởng</h3>
                    <div class="row" id="thuong">
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("CriteriaType")</label>
                            <select id="loaithuong" class="form-control form-control-lg edit">
                                <option value="Quocte">@rm.GetString("International")</option>
                                <option value="Trongnuoc">@rm.GetString("Domestic")</option>
                            </select>
                        </div>
                        <div class="col-xl-6 form-group thuongqt">
                            <label>@rm.GetString("Criteria")</label>
                            <select id="tieuchi" class="form-control form-control-lg edit">
                                <option value="0" selected disabled>@rm.GetString("Criteria")</option>
                                @{
                                    foreach (var item in ViewBag.listCriteria)
                                    {
                                        <option class="optiontieuchi" value="@item.name" name="@item.criteria_id">@item.name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-xl-6 form-group thuongtn" style="display: none">
                            <label style="color:#fff">abc</label>
                            <button class="btn btn-primary form-control form-control-lg edit">@rm.GetString("ListMaga")</button>
                        </div>
                        <div class="col-xl-6 form-group thuongtn" style="display: none">
                            <label>@rm.GetString("JournalIndex")</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.Paper.index" id="paper_index" />
                        </div>
                        <div class="col-xl-6 form-group thuongtn" style="display: none">
                            <label>@rm.GetString("Note")</label>
                            <input class="form-control form-control-lg edit" type="text" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("TotalReward")</label>
                            <input class="form-control form-control-lg edit" id="totalreward" readonly type="text" value="@ViewBag.Paper.total_reward" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("RewardType")</label>
                            <select id="kieuthuong" class="form-control form-control-lg edit">
                                <option value="Quydinh">@rm.GetString("According")</option>
                                <option value="Canhan">@rm.GetString("Repre")</option>
                            </select>
                        </div>
                        @{
                            foreach (var item in ViewBag.listCriteriaOne)
                            {
                                <div class='col-xl-12 d-flex justify-content-center onetieuchi' style="margin-top: 1rem">
                                    <span class='col-xl-2'><input readonly value="@item.name" class='form-control form-control-lg edit tieuchiname' name='tieuchiname' type='text' /></span>
                                    <span class='col-xl-8'><input placeholder='Link' class='form-control form-control-lg edit tieuchilink' type='text' value="@item.link" /></span>
                                    <span class='col-xl-2'><button class='form-control form-control-lg edit btn btn-danger deletetieuchi'><i class='flaticon2-trash'></i></button></span>
                                </div>
                            }
                        }

                    </div>

                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("AuthorInfo")</h3>
                    <div class="row" id="authors-info-container">
                    </div>
                    <!--end:: Row-->
                    <div class="row">
                        <div class="col-xl-12" style="text-align: left">
                            <button class="btn btn-light-primary px-6 font-weight-bold" id="add_author_btn" data-toggle="modal" data-target="#addModal">@rm.GetString("AddAu")</button>
                        </div>

                    </div>
                    <div class="row justify-content-center">
                        <button class="btn btn-light-success px-6 font-weight-bold edit" id="edit_submit">@rm.GetString("Send")</button>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("CmtInfo")</h3>
                    <div>
                        @{
                            Html.RenderAction("Index", "CommentRequest", new { request_id = ViewBag.request_id });
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<datalist id="ncv_list">
    <option>1234</option>
    <option>abcd</option>
    <option>12bư</option>
    <option>323q</option>
</datalist>
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title font-weight-bolder">Thêm tác giả</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                @{
                    Html.RenderAction("AddAuthor", "PartialView");
                }
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title font-weight-bolder">Chỉnh sửa thông tin tác giả</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                @{
                    Html.RenderAction("EditAuthor", "PartialView");
                }
            </div>
        </div>
    </div>
</div>
<form style="visibility: hidden" method="post" action="/Paper/Edit" id="PaperForm">
    <input name="id" id="nameEdit" />
    <input name="editable" id="ckEdit" />
</form>
<button class="btn btn-light-primary px-6 font-weight-bold hidden" style="display: none" id="edit_author_btn" data-toggle="modal" data-target="#editModal"></button>
@section scripts{
    <script src="~/Scripts/ListAllPaper.js"></script>
    @*<script src="~/Scripts/PartialViewScript.js"></script>*@
    <script>
        var paper_id = "@ViewBag.id";
        var ck = "@ViewBag.ckEdit";
        var people = [];
        var criteria = [];
        $('#chuyennganh').select2({
            allowClear: true
        });
        $('#tieuchi').select2({
            allowClear: true
        });
        $('#kieuthuong').select2({
            allowClear: true
        });
        $('#loaithuong').select2({
            allowClear: true
        });
        $('#paper_type').select2({
            allowClear: true
        });

        function editRequest() {
            var RequestPaper = {
                specialization_id: $("#chuyennganh").val(),
                type: $("#loaithuong").val(),
                reward_type: $("#kieuthuong").val(),
                paper_id: paper_id
            }
            $.ajax({
                url: "@Url.Action("editRequest", "Paper")",
                type: "POST",
                data: JSON.stringify(RequestPaper),
                contentType: "application/json;charset=utf-8",
                datatype: "json",
                cache: false,
                success: function (response) {
                    editCriteria();
                },
                error: function () {
                    //alert("fail");
                }
            });
        }

        function editCriteria() {
            var inputs = $(".tieuchiname");
            var inputs2 = $(".tieuchilink");
            for (var i = 0; i < inputs.length; i++) {
                var PaperWithCriteria = {
                    link: $(inputs2[i]).val(),
                    name: $(inputs[i]).val()
                }
                criteria.push(PaperWithCriteria);
            }
            console.log(criteria);
            $.ajax({
                url: "@Url.Action("editCriteria", "Paper")",
                type: "POST",
                data: JSON.stringify({ 'criteria': criteria, 'paper_id': paper_id }),
                contentType: "application/json;charset=utf-8",
                datatype: "json",
                cache: false,
                success: function (response) {
                    if (response.mess == "ss") {
                        //alert(response.mess);
                        editAuthor();
                        //$("#nameEdit").val(paper_id);
                        //$("#ckEdit").val(3);
                        //$("#PaperForm").submit();
                    }
                },
                error: function () {
                    //alert("fail");
                }
            });
        }

        function editAuthor() {
            $.ajax({
                url: "@Url.Action("editAuthor", "Paper")",
                type: "POST",
                data: JSON.stringify({ 'people': people, 'paper_id': paper_id}),
                contentType: "application/json;charset=utf-8",
                datatype: "json",
                cache: false,
                success: function (response) {
                    if (response.mess == "ss") {
                        $("#loading").hide();
                        $("#nameEdit").val(response.id);
                        $("#ckEdit").val(3);
                        $("#PaperForm").submit();
                    }
                    //addCriteria();
                },
                error: function () {
                    //alert("fail");
                }
            });
        }

        $("#edit_submit").click(function () {
            $("#loading").show();
            var temp = $("#paper_publish_date").val();
            var arr = temp.split('/');
            var dateFormat
            if (arr.length == 3) dateFormat = arr[1] + '/' + arr[0] + '/' + arr[2];
            else dateFormat = arr[0] + '/01/' + arr[1];
            var Paper = {
                name: $("#paper_name").val(),
                publish_date: dateFormat,
                link_doi: $("#paper_full").val(),
                link_scholar: $("#paper_scholar").val(),
                paper_type_id: $("#paper_type").val(),
                journal_name: $("#paper_journal").val(),
                vol: $("#paper_vol").val(),
                page: $("#paper_page").val(),
                company: $("#paper_publish_name").val(),
                index: $("#paper_index").val()
            };
            $.ajax({
                url: "@Url.Action("editPaper", "Paper")",
                type: "POST",
                data: JSON.stringify({ 'paper': Paper, 'paper_id': paper_id }),
                contentType: "application/json;charset=utf-8",
                datatype: "json",
                cache: false,
                success: function (response) {
                    if (response.mess == "ss") {
                        editRequest();
                    }
                    else alert('loi');
                },
                error: function () {
                    //alert("fail");
                }
            });
        });

        $(document).ready(function () {
            if (ck != "5") {
                $(".edit").prop("disabled", true);
                $("#add_author_btn").prop("disabled", true);
            }
            else $(".edit").prop("disabled", false);

            var paper_type = "@ViewBag.Paper.paper_type_id";
            $("#paper_type").val(paper_type);
            $("#paper_type").trigger('change');

            var paper_TNQT = "@ViewBag.Paper.type";
            if (paper_TNQT == "Quocte") {
                $("#loaithuong").val("Quocte");
                $(".thuongqt").show();
                $(".thuongtn").hide();
            }
            else {
                $("#loaithuong").val("Trongnuoc");
                $(".thuongqt").hide();
                $(".thuongtn").show();
            }
            $("#loaithuong").trigger('change');

            var kieuthuong = "@ViewBag.Paper.reward_type";
            if (kieuthuong == "Quydinh") $("#kieuthuong").val("Quydinh");
            if (kieuthuong == "Canhan") $("#kieuthuong").val("Canhan");
            $("#kieuthuong").trigger('change');

            var spec = "@ViewBag.Paper.specialization_id";
            $("#chuyennganh").val(spec);
            $("#chuyennganh").trigger('change');

            $(".tieuchivalue").each(function () {
                var temp = $(this).val();
                var option = $("#tieuchi option[value='" + temp + "']");
                option.prop('disabled', true);
            });

            var x = $("#totalreward").val();
            $("#totalreward").val(x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","));

            $.ajax({
                url: "@Url.Action("listAuthor", "Paper")",
                type: "POST",
                data: { 'id': paper_id},
                cache: false,
                success: function (response) {
                    for (var i = 0; i < response.author.length; i++) {
                        add_author_workplace = response.author[i].office_abbreviation;
                        add_author_msnv = response.author[i].mssv_msnv;
                        add_author_name = response.author[i].name;
                        add_author_title = response.author[i].title_strring;
                        add_author_contractType = response.author[i].contract_name;
                        add_author_cmnd = response.author[i].identification_number;
                        add_author_tax = response.author[i].tax_code;
                        add_author_bank = response.author[i].bank_branch;
                        add_author_accno = response.author[i].bank_number;

                        var temp_money = response.author[i].money_reward;
                        if (response.author[i].money_reward != null) add_author_reward = temp_money.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        else add_author_reward = temp_money;

                        add_author_note = '';
                        add_author_email = response.author[i].email;
                        id = new Date().getTime();
                        au = new AuthorInfoView(add_author_workplace, add_author_msnv, add_author_name,
                            add_author_title, add_author_contractType, add_author_cmnd, add_author_tax,
                            add_author_bank, add_author_accno, add_author_reward, add_author_note, add_author_email, id);
                        $("#authors-info-container").append(au.getHTML());
                        var AddAuthor = {
                            name: add_author_name,
                            email: add_author_email,
                            bank_number: add_author_accno,
                            tax_code: add_author_tax,
                            bank_branch: add_author_bank,
                            identification_number: add_author_cmnd,
                            mssv_msnv: add_author_msnv,
                            office_id: response.author[i].office_id_string,
                            contract_id: response.author[i].contract_id,
                            title_id: response.author[i].title_id,
                            people_id: response.author[i].people_id,
                            temp_id: id,
                            office_abbreviation: response.author[i].office_abbreviation,
                            is_reseacher: response.author[i].is_reseacher
                        }
                        people.push(AddAuthor);
                    }
                    if (ck != "5") $(".edit").prop("disabled", true);
                },
                error: function () {
                    //alert("fail");
                }
            });
        });
        $("#loaithuong").change(function () {
            var temp = $(this).val();
            //console.log(temp);
            if (temp == "Quocte") {
                $(".thuongqt").show();
                $(".thuongtn").hide();
            } else {
                $(".thuongqt").hide();
                $(".thuongtn").show();
                $(".deletetieuchi").each(function () {
                    $(this).click();
                });
            }
        });

        $("#tieuchi").change(function () {
            var temp = $("#tieuchi").val();
            $("#thuong").append("<div class='col-xl-12 d-flex justify-content-center onetieuchi' style='margin-top: 1rem'>" +
                "<span class='col-xl-2'><input readonly value='" + temp + "' class='form-control form-control-lg edit tieuchiname' name='tieuchiname' type='text' /></span>" +
                "<span class='col-xl-8'><input placeholder='Link' class='form-control form-control-lg edit tieuchilink' type='text' /></span>" +
                "<span class='col-xl-2'><button class='form-control form-control-lg edit btn btn-danger deletetieuchi'><i class='flaticon2-trash'></i></button></span>" +
                "</div>");
            var option = $("#tieuchi option[value='" + temp + "']");
            option.prop('disabled', true);
        });

        $("#thuong").on("click", ".deletetieuchi", function () {
            var text = $(this).closest(".onetieuchi").find("input[name='tieuchiname']").val();
            var option = $("#tieuchi option[value='" + text + "']");
            option.prop('disabled', false);
            $(this).closest(".onetieuchi").remove();
        });
    </script>
    <script src="~/Scripts/PartialViewScript.js"></script>
}