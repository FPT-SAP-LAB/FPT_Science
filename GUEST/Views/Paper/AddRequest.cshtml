                        </div>
                        <div class="col-xl-6 form-group thuongtn" style="display: none">
                            <label style="color:#fff">abc</label>
                            <button class="btn btn-primary form-control form-control-lg">@rm.GetString("ListMaga")</button>
                        </div>
                        <div class="col-xl-6 form-group thuongtn" style="display: none">
                            <label  class="required-field">@rm.GetString("JournalIndex")</label>
                            <input class="form-control form-control-lg" type="text" />
                        </div>
                        <div class="col-xl-6 form-group thuongtn" style="display: none">
                            <label  class="required-field">@rm.GetString("Note")</label>
                            <input class="form-control form-control-lg" type="text" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label  class="required-field">@rm.GetString("TotalReward")</label>
                            <input class="form-control form-control-lg" readonly type="text" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label  class="required-field">@rm.GetString("RewardType")</label>
                            <select class="form-control form-control-lg">
                                <option value="1">@rm.GetString("According")</option>
                                <option value="2">@rm.GetString("Repre")</option>
                            </select>
                        </div>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("AuthorInfo")</h3>
                    <div class="row">
                        <div class="col-xl-12">
                            <table class="table table-bordered table-checkable tacgia">
                                <thead>
                                    <tr>
                                        <th>@rm.GetString("WorkUnit")</th>
                                        <th>@rm.GetString("MSNV")</th>
                                        <th>@rm.GetString("Name")</th>
                                        <th>@rm.GetString("Title")</th>
                                        <th>@rm.GetString("ContractType")</th>
                                        <th>@rm.GetString("Tax")</th>
                                        <th>@rm.GetString("CMND")</th>
                                        <th>@rm.GetString("CMND")</th>
                                        <th>@rm.GetString("Bank")</th>
                                        <th>@rm.GetString("AccNo")</th>
                                        <th>@rm.GetString("Reward")</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="tacgia_body">
                                    @*<tr>
                                        <td>
                                            <label class="checkbox">
                                                <input type="checkbox" /><span></span>@rm.GetString("In") FE
                                            </label>
                                        </td>
                                        <td><input list="ncv_list" type="text" class="form-control" /></td>
                                        <td><input type="text" class="form-control" /></td>
                                        <td>
                                            <select class="form-control">
                                                <option value="1">Nghiên cứu viên</option>
                                                <option value="2">Giảng viên</option>
                                                <option value="3">Sinh viên</option>
                                            </select>
                                        </td>
                                        <td>
                                            <select class="form-control">
                                                <option value="1">Full time</option>
                                                <option value="2">Part time</option>
                                            </select>
                                        </td>
                                        <td><input type="text" class="form-control" /></td>
                                        <td><input type="text" class="form-control" /></td>
                                        <td><button class="btn btn-light-primary px-6 font-weight-bold btn-sm">Upload</button></td>
                                        <td><input type="text" class="form-control" /></td>
                                        <td><input type="text" class="form-control" /></td>
                                        <td><input readonly type="number" class="form-control" /></td>
                                        <td><input type="text" class="form-control" /></td>
                                    </tr>*@
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xl-12" style="text-align: left">
                         @*   <button class="btn btn-light-danger px-6 font-weight-bold deletetacgia">@rm.GetString("DelAu")</button>*@
                            <button class="btn btn-light-primary px-6 font-weight-bold" id="add_author_btn" data-toggle="modal" data-target="#addModal">@rm.GetString("AddAu")</button>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <button class="btn btn-light-success px-6 font-weight-bold">@rm.GetString("Send")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<datalist id="ncv_list">
    <option>1234</option>
    <option>abcd</option>
    <option>12bư</option>
    <option>323q</option>
</datalist>
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title font-weight-bolder">Thêm tác giả</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                @{
                    Html.RenderAction("AddAuthor", "PartialView");
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/ListAllPaper.js"></script>
    <script src="~/Scripts/PartialViewScript.js"></script>
    <script>
        $("#loaithuong").change(function () {
            var temp = $(this).val();
            console.log(temp);
            if (temp == 1) {
                $(".thuongqt").show();
                $(".thuongtn").hide();
            } else {
                $(".thuongqt").hide();
                $(".thuongtn").show();
                $(".deletetieuchi").each(function () {
                    $(this).click();
                });
            }
        });

        $("#tieuchi").change(function () {
            var temp = $("#tieuchi").val();
            $("#thuong").append("<div class='col-xl-12 d-flex justify-content-center onetieuchi'>" +
                "<span class='col-xl-2'><input readonly value='" + temp + "' class='form-control form-control-lg' name='tieuchiname' type='text' /></span>" +
                "<span class='col-xl-8'><input placeholder='Link' class='form-control form-control-lg' type='text' /></span>" +
                "<span class='col-xl-2'><button class='form-control form-control-lg btn btn-danger deletetieuchi'><i class='flaticon2-trash'></i></button></span>" +
                "</div>");
            var option = $("#tieuchi option[value='" + temp + "']");
            option.prop('disabled', true);
        });

        $("#thuong").on("click", ".deletetieuchi", function () {
            var text = $(this).closest(".onetieuchi").find("input[name='tieuchiname']").val();
            var option = $("#tieuchi option[value='" + text + "']");
            option.prop('disabled', false);
            $(this).closest(".onetieuchi").remove();
        });

        $(".addtacgia").click(function () {
            $("#tacgia_body tr:last").after("<tr>" +
                "<td><label class='checkbox'><input type='checkbox' /><span></span>@rm.GetString("In") FE</label></td>" +
                "<td><input list='ncv_list' type='text' class='form-control' /></td>" +
                "<td><input type='text' class='form-control' /></td>" +
                "<td><select class='form-control'><option value='1'>Nghiên cứu viên</option><option value='2'>Giảng viên</option><option value='3'>Sinh viên</option></select></td>" +
                "<td><select class='form-control'><option value='1'>Full time</option><option value='2'>Part time</option></select></td>" +
                "<td><input type='text' class='form-control' /></td>" +
                "<td><input type='text' class='form-control' /></td>" +
                "<td><button class='btn btn-primary'>Upload</button></td>" +
                "<td><input type='text' class='form-control' /></td>" +
                "<td><input type='text' class='form-control' /></td>" +
                "<td><input readonly type='number' class='form-control' /></td>" +
                "<td><input type='text' class='form-control' /></td>" +
                "</tr>");
        });

        $(".deletetacgia").click(function () {
            var rowCount = $('#tacgia_body tr').length;
            if (rowCount > 1) $("#tacgia_body tr:last").remove();
            else toastr.error("@rm.GetString("ErrorAuthorDel")", "@rm.GetString("Error")");
        });
        $(function () {
            $(".tacgia").hide()
        })
        donvife = {
            1: "FPTU",
            2: "FPT Swinburne",
            3: "Fpoly",
            4: "Khác"
        }
        var numberOfAuthors=0
        $("#add_author_save").click(function () {
            ckfe = $("#ckfe").val()
            add_author_workplace = $("#add_author_workplace").val()
            add_author_msnv = $("#add_author_msnv").val()
            add_author_name = $("#add_author_name").val()
            add_author_title = $("#add_author_title").val()
            add_author_contractType = $("#add_author_contractType").val()
            add_author_cmnd = $("#add_author_cmnd").val()
            add_author_tax = $("#add_author_tax").val()
            add_author_bank = $("#add_author_bank").val()
            add_author_accno = $("#add_author_accno").val()
            add_author_reward = $("#add_author_reward").val()
            add_author_note = $("#add_author_note").val()
            row_id = new Date().getTime()
            $("#tacgia_body").append("\
                <tr id='"+row_id+"'>"
                + "<td>" + donvife[ckfe] + "</td>"
                + "<td>" + add_author_msnv + "</td>"
                + "<td>" + add_author_name + "</td>"
                + "<td>" + add_author_title + "</td>"
                + "<td>" + add_author_contractType + "</td>"
                + "<td>" + add_author_cmnd + "</td>"
                + "<td>" + "" + "</td>"
                + "<td>" + add_author_tax + "</td>"
                + "<td>" + add_author_bank + "</td>"
                + "<td>" + add_author_accno + "</td>"
                + "<td>" + add_author_reward + "</td>"
                + "<td>" + "<span style='cursor:pointer' class='delete-author' data-id='" +row_id+"'><i  style='color:red' class='fas fa-times icon-md'></i></span>" + "</td>"
                +"</tr>\
                ")
            $(".tacgia").show()
            numberOfAuthors++
        })
        $("#tacgia_body").on('click','.delete-author', function () {
            $("#" + $(this).data("id")).remove()
            numberOfAuthors--
            if (numberOfAuthors == 0) {
                $(".tacgia").hide()
            }
        });
        
    </script>
    <script src="~/Content/assets/js/sci/sci-bundle.js"></script>
}

