
@{
    //ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Resources.ResourceManager rm = GUEST.Models.LanguageResource.GetResourceManager();
}
<div class="card card-custom">
    <div class="card-body p-0">
        <div class="row justify-content-center my-10 px-8 my-lg-15 px-lg-10">
            <div class="col-xl-12 col-xxl-12">
                <div class="">
                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("AuthorInfo")</h3>
                    @{
                        Html.RenderAction("AddAuthor", "PartialView");
                    }
                    <h3 class="mb-10 font-weight-bold text-dark">@rm.GetString("CitationInfo")</h3>
                    <div class="row">
                        <div class="col-xl-12">
                            <table class="table table-bordered trichdan">
                                <thead>
                                    <tr>
                                        <th>@rm.GetString("Source")</th>
                                        <th>@rm.GetString("CitationCount")</th>
                                        <th>@rm.GetString("Link")</th>
                                    </tr>
                                </thead>
                                <tbody id="trichdan_body">
                                    <tr>
                                        <td><input class="form-control edit" type="text" value="Google scholar" /></td>
                                        <td><input class="form-control edit" type="number" value="10" /></td>
                                        <td><input class="form-control edit" type="text" value="https://scholar.google.com/citations?view_op=list_works&hl=en&user=qbbO_4UAAAAJ" /></td>
                                    </tr>
                                    <tr>
                                        <td><input class="form-control edit" type="text" /></td>
                                        <td><input class="form-control edit" type="number" min="0" /></td>
                                        <td><input class="form-control edit" type="text" /></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark">Thông tin xét thưởng</h3>
                    <div class="row">
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("TotalReward")</label>
                            <input class="form-control form-control-lg edit" readonly type="text" value="" ; />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("RewardType")</label>
                            <select id="kieuthuong" class="form-control form-control-lg edit">
                                <option value="1">@rm.GetString("According")</option>
                                <option value="2">@rm.GetString("Repre")</option>
                            </select>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <button class="btn btn-light-success px-6 font-weight-bold edit">@rm.GetString("Send")</button>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("CmtInfo")</h3>
                    <div class="row">
                        <div class="col-xl-12">
                            <form>
                                <div class="row">
                                    <div class="col-10">
                                        <input class="form-control" type="text" value="" id="example-text-input" />
                                    </div>
                                    <div class="col-2">
                                        <button type="submit" class="btn btn-block btn-success">@rm.GetString("SendM")</button>
                                    </div>
                                </div>
                            </form>
                            <br />
                            <table class="col-12 table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col" width="15%">@rm.GetString("Time")</th>
                                        <th scope="col" width="15%">@rm.GetString("Sender")</th>
                                        <th scope="col">@rm.GetString("Content")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>01/01/21-10:00AM</td>
                                        <td>Ngô Tùng Sơn</td>
                                        <td>Sao lâu có phản hồi thế em</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            var ck = "@ViewBag.ckEdit";
            if (ck != "4") $(".edit").prop("disabled", true);
            else $(".edit").prop("disabled", false);

            $('.citationE').attr('style', 'display:none !important');
        });

        $(".addrow").click(function () {
            $("#trichdan_body tr:last").after("<tr>" +
                "<td><input type='text' class='form-control' /></td>" +
                "<td><input type='number' class='form-control' min='0' /></td>" +
                "<td><input type='text' class='form-control' /></td>" +
                "</tr>");
        });

        $(".deleterow").click(function () {
            var rowCount = $('#trichdan_body tr').length;
            if (rowCount > 1) $("#trichdan_body tr:last").remove();
            else toastr.error("@rm.GetString("ErrorCita")", "@rm.GetString("Error")");
        });
    </script>
}

