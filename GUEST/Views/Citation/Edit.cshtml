
@{
    //ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Resources.ResourceManager rm = GUEST.Models.LanguageResource.GetResourceManager();
}
<div class="card card-custom">
    <div class="card-body p-0">
        <div class="row justify-content-center my-10 px-8 my-lg-15 px-lg-10">
            <div class="col-xl-12 col-xxl-12">
                <div class="">
                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("AuthorInfo")</h3>
                    @{
                        Html.RenderAction("AddAuthor", "PartialView");
                    }
                    <h3 class="mb-10 font-weight-bold text-dark">@rm.GetString("CitationInfo")</h3>
                    <div class="row">
                        <div class="col-xl-12">
                            <table class="table table-bordered trichdan">
                                <thead>
                                    <tr>
                                        <th>@rm.GetString("Source")</th>
                                        <th>@rm.GetString("CitationCount")</th>
                                        <th>@rm.GetString("Link")</th>
                                    </tr>
                                </thead>
                                <tbody id="trichdan_body">
                                    @{
                                        foreach (var item in ViewBag.citation)
                                        {
                                            <tr>
                                                <td><input autocomplete="off" class="form-control edit trichdan_source" type="text" value="@item.source" /></td>
                                                <td><input autocomplete="off" class="form-control edit trichdan_count" type="number" value="@item.count" /></td>
                                                <td><input autocomplete="off" class="form-control edit trichdan_link" type="text" value="@item.link" /></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <div class="col-xl-12" style="text-align: end">
                                <button class="btn btn-light-danger px-6 font-weight-bold deleterow edit">@rm.GetString("DelRow")</button>
                                <button class="btn btn-light-primary px-6 font-weight-bold addrow edit">@rm.GetString("AddRow")</button>
                            </div>
                        </div>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark">Thông tin xét thưởng</h3>
                    <div class="row">
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("TotalReward")</label>
                            <input autocomplete="off" class="form-control form-control-lg edit" id="totalreward" readonly type="text" value="@ViewBag.author.total_reward"  />
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <button class="btn btn-light-success px-6 font-weight-bold edit" id="btn-submit">@rm.GetString("Send")</button>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("CmtInfo")</h3>
                    <div>
                        @{ Html.RenderAction("Index", "CommentRequest", new { request_id = ViewBag.request_id }); }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<form style="visibility: hidden" method="post" action="/Citation/Edit" id="CitationForm">
    <input name="id" id="nameEdit" />
    <input name="editable" id="ckEdit" />
</form>
<input class="form-control" value="@ViewBag.author.name" id="name_temp" style="display:none"/>
@section scripts{
    <script src="~/Scripts/PartialViewScript.js"></script>
    <script>
        var people = [];
        var citation = [];
        $(document).ready(function () {

            $('.citationE').attr('style', 'display:none !important');

            $("#ckfe").val("@ViewBag.author.office_abbreviation");
            $("#ckfe").trigger('change');

            var temp_ms = "@ViewBag.author.mssv_msnv";
            if ($('#add_author_msnv').find("option[value='" + temp_ms + "']").length) {
                $('#add_author_msnv').val(temp_ms).trigger('change');
            } else {
                // Create a DOM Option and pre-select by default
                var newOption = new Option(temp_ms, temp_ms, true, true);
                // Append it to the select
                $('#add_author_msnv').append(newOption).trigger('change');
            }

            @*$("#add_author_msnv").val("@ViewBag.author.mssv_msnv");
            $("#add_author_msnv").trigger('change');*@

            var is_Reseacher = "@ViewBag.author.is_reseacher";
            var is_r = true;
            if (is_Reseacher == "False") is_r = false;

            $("#add_author_mail").val("@ViewBag.author.email");
            $("#add_author_name").val($("#name_temp").val());
            $("#add_author_title").val("@ViewBag.author.title_id");
            $("#add_author_title").trigger('change');
            $("#add_author_contractType").val("@ViewBag.author.contract_id");
            $("#add_author_contractType").trigger('change');
            $("#add_author_cmnd").val("@ViewBag.author.identification_number");
            $("#add_author_cmnd_link").val("@ViewBag.author.identification_file_link");
            $("#add_author_tax").val("@ViewBag.author.tax_code");
            $("#add_author_bank").val("@ViewBag.author.bank_branch");
            $("#add_author_accno").val("@ViewBag.author.bank_number");
            $("#add_author_isReseacher").prop("checked", is_r);

            var ck = "@ViewBag.ckEdit";
            if (ck != "5") $(".edit").prop("disabled", true);
            else $(".edit").prop("disabled", false);

            var x = $("#totalreward").val();
            $("#totalreward").val(x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","));
        });

        $(".addrow").click(function () {
            $("#trichdan_body tr:last").after("<tr>" +
                "<td><input autocomplete='off' type='text' class='form-control trichdan_source' /></td>" +
                "<td><input autocomplete='off' type='number' class='form-control trichdan_count' min='0' /></td>" +
                "<td><input autocomplete='off' type='text' class='form-control trichdan_link' /></td>" +
                "</tr>");
        });

        $(".deleterow").click(function () {
            var rowCount = $('#trichdan_body tr').length;
            if (rowCount > 1) $("#trichdan_body tr:last").remove();
            else toastr.error("@rm.GetString("ErrorCita")", "@rm.GetString("Error")");
        });

        function addAuthor() {
            ckfe = $("#ckfe").val()
            add_author_workplace = $("#ckfe").val()
            add_author_msnv = $("#add_author_msnv").val()
            add_author_name = $("#add_author_name").val()
            add_author_title = $("#add_author_title option:selected").text()
            add_author_contractType = $("#add_author_contractType option:selected").text()
            add_author_cmnd = $("#add_author_cmnd").val()
            add_author_tax = $("#add_author_tax").val()
            add_author_bank = $("#add_author_bank").val()
            add_author_accno = $("#add_author_accno").val()
            add_author_reward = $("#add_author_reward").val()
            add_author_note = $("#add_author_note").val()
            add_author_email = $("#add_author_mail").val()
            id = new Date().getTime()
            var AddAuthor = {
                name: add_author_name,
                email: add_author_email,
                bank_number: add_author_accno,
                tax_code: add_author_tax,
                bank_branch: add_author_bank,
                identification_number: add_author_cmnd,
                mssv_msnv: add_author_msnv,
                office_id: $("#ckfe option:selected").attr("name"),
                contract_id: $("#add_author_contractType").val(),
                title_id: $("#add_author_title").val(),
                people_id: "@ViewBag.author.people_id",
                temp_id: id,
                office_abbreviation: $("#ckfe option:selected").val(),
                identification_file_link: $("#add_author_cmnd_link").val(),
            }
            people.push(AddAuthor);
        }

        $("#btn-submit").click(function () {
            $("#loading").show();
            addAuthor();
            var inputSource = $(".trichdan_source");
            var inputCount = $(".trichdan_count");
            var inputLink = $(".trichdan_link");
            for (var i = 0; i < inputSource.length; i++) {
                if ($(inputSource[i]).val() != "" && $(inputCount[i]).val() != "" && $(inputLink[i]).val() != "") {
                    var oneCitation = {
                        source: $(inputSource[i]).val(),
                        count: $(inputCount[i]).val(),
                        link: $(inputLink[i]).val()
                    };
                    citation.push(oneCitation);
                } else {
                    $("#loading").hide();
                    toastr.error("Cần nhập đủ thông tin cho trích dẫn");
                    return false;
                }
            }

            if (citation.length == 0) {
                toastr.error("Cần có ít nhất 1 trích dẫn");
                $("#loading").hide();
                return false;
            }
            if (people.length == 0) {
                toastr.error("Nhập thông tin tác giả");
                $("#loading").hide();
                return false;
            }

            $.ajax({
                url: "@Url.Action("editCitation", "Citation")",
                type: "POST",
                data: JSON.stringify({ 'citation': citation, 'people': people, 'request_id': "@ViewBag.request_id" }),
                contentType: "application/json;charset=utf-8",
                datatype: "json",
                cache: false,
                success: function (response) {
                    if (response.mess == "ss") {
                        $("#loading").hide();
                        $("#nameEdit").val(response.id);
                        $("#ckEdit").val("3");
                        $("#CitationForm").submit();
                    }
                    else alert('loi');
                },
                error: function () {
                    //alert("fail");
                }
            });
        });
    </script>
}

