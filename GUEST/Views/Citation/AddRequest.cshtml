
@{
    //ViewBag.Title = "AddRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card-custom">
    <div class="card-body p-0">
        <div class="row justify-content-center my-10 px-8 my-lg-15 px-lg-10">
            <div class="col-xl-12 col-xxl-12">
                <div class="">
                    <h3 class="mb-10 font-weight-bold text-dark">Thông tin yêu cầu</h3>
                    <div class="row">
                        <div class="col-xl-6 form-group">
                            <label>MSSV/MSNV</label>
                            <input class="form-control form-control-lg" type="text" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>Tên tác giả</label>
                            <input class="form-control form-control-lg custom-pickdate" type="text" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>Đơn vị</label>
                            <input class="form-control form-control-lg" type="text" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>Khu vực</label>
                            <input class="form-control form-control-lg" type="text" />
                        </div>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark">Thông tin trích dẫn</h3>
                    <div class="row">
                        <div class="col-xl-12">
                            <table class="table table-bordered trichdan">
                                <thead>
                                    <tr>
                                        <th>Nguồn trích dẫn</th>
                                        <th>Số lượng trích dẫn</th>
                                        <th>Link xác minh</th>
                                    </tr>
                                </thead>
                                <tbody id="trichdan_body">
                                    <tr>
                                        <td><input class="form-control" type="text" /></td>
                                        <td><input class="form-control" type="number" /></td>
                                        <td><input class="form-control" type="text" /></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="col-xl-12" style="text-align: end">
                                <button class="btn btn-danger font-weight-bolder deleterow">Xóa dòng</button>
                                <button class="btn btn-success font-weight-bolder addrow">Thêm dòng</button>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <button class="btn btn-success col-xl-1">Gửi yêu cầu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(".addrow").click(function () {
            $("#trichdan_body tr:last").after("<tr>" +
                "<td><input type='text' class='form-control' /></td>" +
                "<td><input type='number' class='form-control' /></td>" +
                "<td><input type='text' class='form-control' /></td>" +
                "</tr>");
        });

        $(".deleterow").click(function () {
            var rowCount = $('#trichdan_body tr').length;
            if (rowCount > 1) $("#trichdan_body tr:last").remove();
            else toastr.error("Phải có ít nhất 1 dòng", "Lỗi");
        });
    </script>
}

