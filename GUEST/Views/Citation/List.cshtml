
@{
    //ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Resources.ResourceManager rm = GUEST.Models.LanguageResource.GetResourceManager();
}

<div class="card card-custom">
    <div class="card-body p-0">
        <div class="row justify-content-center my-10 px-8 my-lg-15 px-lg-10">
            <div class="col-xl-12 col-xxl-12">
                <div class="row">
                    <div class="col-xl-3 input-group date mb-2">
                        <select type="text" class="form-control">
                            <option value="0" selected>@rm.GetString("All")</option>
                            <option value="1">@rm.GetString("Jan")</option>
                            <option value="2">@rm.GetString("Feb")</option>
                            <option value="3">@rm.GetString("Mar")</option>
                            <option value="4">@rm.GetString("Apr")</option>
                            <option value="5">@rm.GetString("May")</option>
                            <option value="6">@rm.GetString("Jun")</option>
                            <option value="7">@rm.GetString("Jul")</option>
                            <option value="8">@rm.GetString("Aug")</option>
                            <option value="9">@rm.GetString("Sep")</option>
                            <option value="10">@rm.GetString("Oct")</option>
                            <option value="11">@rm.GetString("Nov")</option>
                            <option value="12">@rm.GetString("Dec")</option>
                        </select>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="la la-check"></i></span>
                        </div>
                    </div>
                    <div class="col-xl-3 input-group date mb-2">
                        <input type="text" class="form-control custom-pickyear" value="2021" readonly />
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="la la-check"></i></span>
                        </div>
                    </div>
                    <div class="col-xl-12">
                        <table id="table_trichdan">
                            <thead>
                                <tr>
                                    <th>@rm.GetString("Index")</th>
                                    <th>@rm.GetString("Source")</th>
                                    <th>@rm.GetString("CitationCount")</th>
                                    <th>@rm.GetString("Link")</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Scopus</td>
                                    <td>123</td>
                                    <td><a class="btn btn-primary" href="#">@rm.GetString("View")</a></td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Google scholar</td>
                                    <td>456</td>
                                    <td><a class="btn btn-primary" href="#">@rm.GetString("View")</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/ListAllPaper.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $("#table_trichdan").DataTable({
                oLanguage: {
                    oPaginate: {
                        sPrevious: "@rm.GetString("Pre")",
                        sNext: "@rm.GetString("Next")"
                    },
                    sEmptyTable: "@rm.GetString("EmptyTB")",
                    sInfo: "@rm.GetString("ShowTB")",
                    sLengthMenu: "@rm.GetString("Show") <select>" +
                        "<option value='5'>5</option>" +
                        "<option value='10'>10</option>" +
                        "<option value='20'>20</option>" +
                        "</select> @rm.GetString("Record")",
                    sSearch: "@rm.GetString("Search")"
                }
            });
        });
    </script>
}

