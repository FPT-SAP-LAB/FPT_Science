@using ENTITIES.CustomModels.ScienceManagement.ArticlePolicy;
@{
    ViewBag.Title = "Danh sách chính sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Resources.ResourceManager rm = GUEST.Models.LanguageResource.GetResourceManager();
}

<!--begin::Row-->
<div class="row">
    @foreach (ArticlePolicyIndex item in ViewBag.items)
    {
        <div class="col-xl-4">
            <!--begin::Mixed Widget 10-->
            <div class="card card-custom card-stretch gutter-b">
                <div class="card-header d-flex flex-column" style="padding: 2rem 2.25rem;">
                    <!--begin::Info-->
                    <div class="d-flex align-items-center">
                        <span class="text-muted font-weight-bold font-size-lg flex-grow-1">
                            @item.LastEdited.ToString(rm.GetString("DateFormat"))
                        </span>
                    </div>
                    <!--end::Info-->
                    <!--begin::Link-->
                    <a href="/ArticlePolicy/Detail?id=@item.VersionID" class="text-dark font-weight-bolder text-hover-primary font-size-h4">
                        @item.Title
                    </a>
                    <!--end::Link-->
                </div>
                <!--begin::Body-->
                <div class="card-body d-flex flex-column">
                    <div class="scroll scroll-pull" data-scroll="true" data-wheel-propagation="true" style="height: 200px">
                        <div class="flex-grow-1 pb-5">
                            <!--begin::Desc-->
                            @Html.Raw(item.Content)
                            <!--end::Desc-->
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    @foreach (var tag in item.Types)
                    {
                        <a href="#" class="label label-primary label-pill" style="width: auto;padding: 0 10px;">@tag</a>
                    }
                </div>
                <!--end::Body-->
            </div>
            <!--end::Mixed Widget 10-->
        </div>
    }
</div>
<!--end::Row-->

@section Scripts {

}