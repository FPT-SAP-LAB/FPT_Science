    </div>
    <div class="col-lg-8">
        <!--begin::Advance Table Widget 2-->
        <div class="row">
            <div class="col-12">
                <div class="card card-custom card-stretch gutter-b" style="padding-bottom:2rem">
                    <!--begin::Header-->
                    <h3 class="card-label font-weight-bolder text-dark">Công trình khoa học</h3>
                    <hr />
                    <!--end::Header-->
                    <!--begin::Body-->
                    <div class="card-body pt-3 pb-0">
                        <!--begin::Table-->
                        <table id="table_tapchi" style="border:0" class="table table-bordered table-checkable">
                            <thead hidden>
                                <tr>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        <!--end::Table-->
                    </div>
                    <!--end::Body-->
                </div>
                <!--end::Advance Table Widget 2-->
            </div>
            
        </div>
        @if (ViewBag.profile.awards.Count > 0) {
        <div class="row">
            <div class="col-12">
                <div class="card card-custom card-stretch gutter-b">
                    <h3 class="card-label font-weight-bolder text-dark"><i class="text-success la la-navicon icon-md"></i> Giải thưởng</h3>
                    <hr />
                    <!--end::Header-->
                    <!--begin::Body-->
                    <div class="card-body pt-5 pb-0">
                        <!--begin::Table-->
                        <div class="timeline timeline-2" id="rewards_list">
                            <div class="timeline-bar"></div>
                            @foreach (BaseRecord<Award> award in ViewBag.profile.awards)
                            {
                                <div class="timeline-item ">
                                    <span class=" timeline-badge bg-success"></span>
                                    <div class="timeline-content d-flex align-items-center justify-content-between">
                                        <span class="mr-3">
                                            <i class="text-warning la la-diamond icon-md"></i>@award.records.award_time: @award.records.rank - @award.records.competion_name
                                        </span>
                                    </div>
                                </div>
                                }
                        </div>
                    </div>
                    <!--end::Table-->
                </div>
            </div>
        </div>
        }
    </div>

</div>
