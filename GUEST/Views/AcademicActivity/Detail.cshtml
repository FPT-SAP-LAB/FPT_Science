        </div>
        <!-- end: Invoice body-->
        <!-- begin: Invoice footer-->
    </div>
</div>
<!-- end::Card-->

@section scripts{
    <script>
        $(document).ready(function () {
            var temp = 2;
            var html = `<tr class="content-nav content-active">
                        <td class="text-center" onclick="click_load_detail(0)">ViewBag.abc gì đó</td>
                        </tr>`;
            for (i = 1; i <= temp; i++) {
                html += `<tr class="content-nav">
                        <td class="text-center" onclick="click_load_detail(`+i+`)" >ViewBag.abc[i] gì đó</td>
                        </tr>`
            }
            $('#nav_table').html(html)

            $('.content-nav').click(function () {
                $('.content-nav').each(function () {
                    $('.content-active').removeClass('content-active').addClass('content-nav')
                })
                $(this).removeClass('content-nav').addClass('content-active')
            })
        })

        function click_load_detail(content_id) {
            var id = { content_id: content_id}
            $.ajax({
                url: '/AcademicActivity/DetailContent',
                type: 'post',
                dataType: 'json',
                data: id,
                success: function (data) {
                    $('#event-content').text(data.content)
                }
            })
        }
    </script>
}
