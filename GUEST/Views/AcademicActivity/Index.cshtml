@section scripts{
    <script>
        function goDetail(id) {
            window.location.href = 'Detail?id=' + id;
        }
    </script>
    <script>

        $(document).ready(function () {
            var count = 0;
            var type = [];
            $('.activity-type').click(function () {
                count = 0;
                var id = $(this).attr('id');
                    var check = false;
                    for (var i = 0; i < type.length; i++) {
                        if (type[i] == id) {
                            check = true;
                            type.splice(i, 1);
                            break;
                        }
                    }
                    if (!check) {
                        type.push(id);
                    } 
                    
                
                
                $.ajax({
                    url: "@Url.Action("LoadMoreList", "AcademicActivity")",
                    method: "POST",
                    datatype: "json",
                    cache: false,
                    data: {
                        count: count,
                        type: type
                    },
                    success: function (data) {
                        var temp = "";
                        $(data).each(function (i, item) {
                            temp += `<div class="col-sm-4 col-md-4 col-lg-4 col-xl-4 min-h-200px">
            <div class="card card-custom gutter-b card-stretch">
                <div class="card-body d-flex flex-column rounded bg-light justify-content-between border-side">
                    <div class="font-content">
                        <h4 class="font-size-h4">
                            <a href="goDetail(`+ item.activity_id +`)" class="text-dark-75 font-weight-bolder">`+ item.activity_name + `</a>
                        </h4>
                        <div class="">
                            Thời gian: `+ item.from + ` - ` + item.to + `
                        </div>
                        <div class="">
                            Địa điểm: `+ item.location + `
                        </div>
                    </div>
                </div>
            </div>
                    </div>`
                        });
                        $('#content-control').html(temp);
                    },
                    error: function () {


                    }
                })
            });
            $('#load-more').click(function () {
                count++;
            $.ajax({
                    url: "@Url.Action("LoadMoreList", "AcademicActivity")",
                    method: "POST",
                    datatype: "json",
                    cache: false,
                    data: {
                        count: count,
                        type: type
                    },
                    success: function (data) {
                        var temp = "";
                        $(data).each(function (i, item) {
                            temp += `<div class="col-sm-4 col-md-4 col-lg-4 col-xl-4 min-h-200px">
            <div class="card card-custom gutter-b card-stretch">
                <div class="card-body d-flex flex-column rounded bg-light justify-content-between border-side">
                    <div class="font-content">
                        <h4 class="font-size-h4">
                            <a href="goDetail(`+ item.activity_id +`)" class="text-dark-75 font-weight-bolder">`+ item.activity_name + `</a>
                        </h4>
                        <div class="">
                            Thời gian: `+ item.from + ` - ` + item.to + `
                        </div>
                        <div class="">
                            Địa điểm: `+ item.location + `
                        </div>
                    </div>
                </div>
            </div>
                    </div>`
                        });
                        $(temp).hide().appendTo($("#content-control")).slideDown(1000);
                        if ($(data).length < 6) {
                            $('#load-more').hide();
                        }
                    },
                    error: function () {


                    }
                });
            return false;
        })
        })


    </script>
}