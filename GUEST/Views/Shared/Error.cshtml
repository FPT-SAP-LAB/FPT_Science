@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool show_error_stack = false; //chạy thật thì tắt bỏ cái này đi
}
<div class="row">
    <div class="col-xl-12">
        <!--begin::Tiles Widget 3-->
        <div class="card card-custom bgi-no-repeat bgi-no-repeat bgi-size-cover gutter-b" style="min-height: 40rem; background-image: url(/Content/assets/media/error/bg4.jpg)">
            <!--begin::Body-->
            <div class="card-body d-flex flex-column" style="">
                <!--begin::Title-->
                <a href="#" class="text-dark-75 text-hover-primary font-weight-bolder font-size-h3">
                    @if (HttpContext.Current.Response.StatusCode == 404)
                    {
                        <span>Trang này không tồn tại hoặc bạn không có quyền truy cập!</span>
                    }
                    else
                    {
                        <span>Opps! Trang này không tồn tại hoặc bạn không có quyền truy cập</span>
                    }
                </a>
                    <!--begin::Content-->
                <h1 class="font-weight-boldest text-dark-75 mt-15" style="font-size: 5rem">
                    @HttpContext.Current.Response.StatusCode - @HttpContext.Current.Response.StatusDescription
                </h1>
                    <p class="font-size-h3 text-muted font-weight-normal">
                        
                    </p>
                    @if (show_error_stack)
                    {
                        <div>
                            <p>
                                <pre>
                    @ViewBag.exception
                    </pre>
                            </p>
                        </div>
                    }
                    <!--------------------------------------------------------------------------------------------->
                    <!--end::Content-->
                <!--end::Title-->
            </div>
            <!--end::Body-->
        </div>
        <!--end::Tiles Widget 3-->
    </div>
</div>

@section scripts{

}