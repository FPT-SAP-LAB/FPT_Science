
@{
    //ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Resources.ResourceManager rm = GUEST.Models.LanguageResource.GetResourceManager();
}
<div class="card card-custom">
    <div class="card-body p-0">
        <div class="row justify-content-center my-10 px-8 my-lg-15 px-lg-10">
            <div class="col-xl-12 col-xxl-12">
                <div class="">
                    <h3 class="mb-10 font-weight-bold text-dark">@rm.GetString("RequestInfo")</h3>
                    <div class="row">
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("InvenName")</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.item.name" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("PatentNumber")</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.item.no" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("PatentType")</label>
                            <input class="form-control form-control-lg edit" type="text" value="@ViewBag.item.type_name" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("PatentDate")</label>
                            <input class="form-control form-control-lg edit custom-pickdate" type="text" value="@ViewBag.item.date.ToString("dd/MM/yyyy")" />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("Country")</label>
                            <select class="form-control edit" id="search_country" name="param">
                                @{
                                    foreach (var item in ViewBag.listCountry)
                                    {
                                        <option value="@item.country_id">@item.country_name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("FileCM")</label>
                            <button class="btn btn-light-primary px-6 font-weight-bold btn-sm form-control edit">Upload</button>
                        </div>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark">Thông tin xét thưởng</h3>
                    <div class="row">
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("TotalReward")</label>
                            <input class="form-control form-control-lg edit" readonly type="text" value="@ViewBag.item.total_reward" ; />
                        </div>
                        <div class="col-xl-6 form-group">
                            <label>@rm.GetString("RewardType")</label>
                            <select id="kieuthuong" class="form-control form-control-lg edit">
                                <option value="1">@rm.GetString("According")</option>
                                <option value="2">@rm.GetString("Repre")</option>
                            </select>
                        </div>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("AuthorInfo")</h3>
                    <div class="row">
                        <div class="col-xl-12">
                            <table class="table table-bordered tacgia">
                                <thead>
                                    <tr>
                                        <th>@rm.GetString("WorkUnit")</th>
                                        <th>@rm.GetString("MSNV")</th>
                                        <th>@rm.GetString("Name")</th>
                                        <th>@rm.GetString("Title")</th>
                                        <th>@rm.GetString("ContractType")</th>
                                        <th>@rm.GetString("Tax")</th>
                                        <th>@rm.GetString("CMND")</th>
                                        <th>@rm.GetString("CMND")</th>
                                        <th>@rm.GetString("Bank")</th>
                                        <th>@rm.GetString("AccNo")</th>
                                        <th>@rm.GetString("Reward")</th>
                                        <th>@rm.GetString("Note")</th>
                                    </tr>
                                </thead>
                                <tbody id="tacgia_body">
                                    @{
                                        int count = 1;
                                        foreach (var item in ViewBag.listAuthor)
                                        {
                                            string id = count + "idauthor";
                                            <tr id="@id">
                                                <td>@item.office_abbreviation</td>
                                                <td>@item.mssv_msnv</td>
                                                <td>@item.name</td>
                                                <td>@item.title_name</td>
                                                <td>@item.contract_name</td>
                                                <td>@item.tax_code</td>
                                                <td>@item.identification_number</td>
                                                <td>
                                                    <a target="_blank" href="@item.link" class='btn btn-sm btn-clean btn-icon '>
                                                        <i class='la la-eye'></i>
                                                    </a>
                                                </td>
                                                <td>@item.bank_branch</td>
                                                <td>@item.bank_number</td>
                                                <td>@item.money_reward</td>
                                                <td>
                                                    <a onclick='' class='btn btn-sm btn-clean btn-icon editbtn edit' title='Edit'>
                                                        <i class='far fa-edit'></i>
                                                    </a>
                                                    <span style='cursor:pointer' class='delete-author edit' data-id='@id'>
                                                        <a class='btn btn-sm btn-clean btn-icon' title='Delete'>
                                                            <i class='la la-trash'></i>
                                                        </a>
                                                    </span>
                                                </td>
                                            </tr>
                                            count++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xl-12" style="text-align: end">
                            @*<button class="btn btn-light-danger px-6 font-weight-bold deletetacgia">@rm.GetString("DelAu")</button>*@
                            <button class="btn btn-light-primary px-6 font-weight-bold edit" data-toggle="modal" data-target="#addModal">@rm.GetString("AddAu")</button>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <button class="btn btn-light-success px-6 font-weight-bold edit">@rm.GetString("Send")</button>
                    </div>
                    <h3 class="mb-10 font-weight-bold text-dark mt-10">@rm.GetString("CmtInfo")</h3>
                    <div class="row">
                        <div class="col-xl-12">
                            <form>
                                <div class="row">
                                    <div class="col-10">
                                        <input class="form-control" type="text" value="" id="example-text-input" />
                                    </div>
                                    <div class="col-2">
                                        <button type="submit" class="btn btn-block btn-success">@rm.GetString("SendM")</button>
                                    </div>
                                </div>
                            </form>
                            <br />
                            <table class="col-12 table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col" width="15%">@rm.GetString("Time")</th>
                                        <th scope="col" width="15%">@rm.GetString("Sender")</th>
                                        <th scope="col">@rm.GetString("Content")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in ViewBag.cmt)
                                        {
                                            <tr>
                                                <td>@item.date.ToString("dd/MM/yyyy")</td>
                                                <td>@item.email</td>
                                                <td>@item.content</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title font-weight-bolder">Thêm tác giả</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                @{
                    Html.RenderAction("AddAuthor", "PartialView");
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/ListAllPaper.js"></script>
    <script src="~/Scripts/PartialViewScript.js"></script>
    <script>
        var numberOfAuthors = parseInt("@ViewBag.numberAuthor");
        $('#search_country').select2({
            allowClear: true
        });

        $('#kieuthuong').select2({
            allowClear: true
        });
        $(document).ready(function () {
            var ck = "@ViewBag.ckEdit";
            if (ck != "4") $(".edit").prop("disabled", true);
            else $(".edit").prop("disabled", false);

            var kieuthuong = "@ViewBag.item.reward_type";
            if (kieuthuong == "Quydinh") $("#kieuthuong").val(1);
            if (kieuthuong == "Canhan") $("#kieuthuong").val(2);
            $("#kieuthuong").trigger('change');

            var country = "@ViewBag.item.country_id";
            $("#search_country").val(country);
            $("#search_country").trigger('change');
        });
    </script>
}

