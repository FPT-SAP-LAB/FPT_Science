
@{
    ViewBag.Title = "Cài đặt thông báo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 col-sm-12">
        <!--begin::Card-->
        <div class="card card-custom gutter-b example example-compact">
            <div class="card-body">
                <!--begin::Form-->
                @foreach (ENTITIES.CustomModels.SubscribeLanguage item in ViewBag.subscribes)
                {
                    <div class="form-group row">
                        <label class="col-8 col-form-label">@item.TypeName</label>
                        <div class="col-4">
                            <span class="switch switch-outline switch-icon switch-success">
                                <label>
                                    <input class="subscribe" data-type="@item.notification_type_id" 
                                           type="checkbox" @(item.is_subscribe ? "checked" : "") name="select" />
                                    <span></span>
                                </label>
                            </span>
                        </div>
                    </div>
                }
                <!--end::Form-->
            </div>
            <div class="card-footer text-center">
                <a href="#" onclick="saveSubscribe()" class="btn btn-light-success px-6 font-weight-bold">Lưu</a>
            </div>
        </div>
        <!--end::Card-->
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts{
    <script>
        function saveSubscribe() {
            let temp = []
            for (var i = 0; i < $(".subscribe").length; i++) {
                let ele = $(".subscribe").eq(i);
                temp.push({
                    notification_type_id: ele.data("type"),
                    is_subscribe: ele.prop("checked")
                })
            }
            $("#loading").show();
            $.ajax({
                url: "/Notification/Update",
                method: "post",
                data: {
                    subscribes: temp
                },
                success: function (data) {
                    if (data.success) {
                        toastr.success("Cập nhật thành công");
                    } else {
                        toastr.error(data.content);
                    }
                    $("#loading").hide();
                },
                error: function () {
                    toastr.error("Có lỗi xảy ra");
                    $("#loading").hide();
                }
            })
        }
    </script>
}